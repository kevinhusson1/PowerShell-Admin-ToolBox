<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Couleurs ToolBox -->
    <SolidColorBrush x:Key="ToolBoxInfoBrush" Color="#0EA5E9" />
    <SolidColorBrush x:Key="ToolBoxSuccessBrush" Color="#059669" />

    <!-- Style bouton simple -->
    <Style x:Key="StandardButton" TargetType="Button">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="#374151" />
        <Setter Property="BorderBrush" Value="#D1D5DB" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,6" />
    </Style>
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ToolBoxInfoBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="12,6" />
    </Style>

    <Style x:Key="SuccessButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ToolBoxSuccessBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="12,6" />
    </Style>

</ResourceDictionary>