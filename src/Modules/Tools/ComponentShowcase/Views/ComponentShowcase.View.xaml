<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Vitrine des Composants PSToolBox" Height="850" Width="1200"
    Background="{DynamicResource Neutral.Background.Window}" FontFamily="{DynamicResource UIFont}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="20,10,20,10">
            <Border Background="{DynamicResource Primary.Brush}" Width="60" Height="60" CornerRadius="30" DockPanel.Dock="Left">
                <TextBlock Text="ðŸŽ¨" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Charte Graphique" Style="{DynamicResource H1Style}" />
                <TextBlock Text="Catalogue de tous les composants de l'application" Style="{DynamicResource H2Style}" />
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <GroupBox Style="{DynamicResource SectionGroupBoxStyle}">
                        <GroupBox.Header><TextBlock Text="Typographie" Style="{DynamicResource GroupBoxHeaderTextStyle}"/></GroupBox.Header>
                        <StackPanel>
                            <TextBlock Text="Titre H1" Style="{DynamicResource H1Style}" /><TextBlock Text="Sous-titre H2" Style="{DynamicResource H2Style}" /><TextBlock Text="Titre de section H4" Style="{DynamicResource H4Style}" /><TextBlock Text="Texte standard. Lorem ipsum dolor sit amet." TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Style="{DynamicResource SectionGroupBoxStyle}">
                        <GroupBox.Header><TextBlock Text="Boutons" Style="{DynamicResource GroupBoxHeaderTextStyle}"/></GroupBox.Header>
                        <WrapPanel>
                            <Button Content="Primaire" Style="{DynamicResource PrimaryButtonStyle}" Margin="5"/><Button Content="Secondaire" Style="{DynamicResource SecondaryButtonStyle}" Margin="5"/><Button Content="SuccÃ¨s" Style="{DynamicResource GreenButtonStyle}" Margin="5"/><Button Content="Danger" Style="{DynamicResource RedButtonStyle}" Margin="5"/><Button Content="DÃ©sactivÃ©" Style="{DynamicResource PrimaryButtonStyle}" IsEnabled="False" Margin="5"/>
                        </WrapPanel>
                    </GroupBox>
                    <GroupBox Style="{DynamicResource SectionGroupBoxStyle}">
                        <GroupBox.Header><TextBlock Text="ContrÃ´les de Saisie" Style="{DynamicResource GroupBoxHeaderTextStyle}"/></GroupBox.Header>
                        <StackPanel>
                            <TextBlock Text="TextBox" Style="{DynamicResource H4Style}" Margin="0,0,0,5"/><TextBox Text="Valeur saisie" Style="{DynamicResource StandardTextBoxStyle}" Margin="0,0,0,10"/>
                            <TextBlock Text="PasswordBox" Style="{DynamicResource H4Style}" Margin="0,0,0,5"/><PasswordBox Style="{DynamicResource StandardPasswordBoxStyle}" Margin="0,0,0,10"/>
                            <TextBlock Text="ComboBox (Standard)" Style="{DynamicResource H4Style}" Margin="0,0,0,5"/>
                            <ComboBox Style="{DynamicResource StandardComboBoxStyle}" ItemContainerStyle="{DynamicResource StandardComboBoxItemStyle}" Margin="0,0,0,10" SelectedIndex="0">
                                <ComboBoxItem Content="Option 1"/><ComboBoxItem Content="Option 2"/>
                            </ComboBox>
                            <TextBlock Text="ComboBox (Ã‰ditable)" Style="{DynamicResource H4Style}" Margin="0,0,0,5"/>
                            <ComboBox Style="{DynamicResource EditableComboBoxStyle}" ItemContainerStyle="{DynamicResource StandardComboBoxItemStyle}" Margin="0,0,0,10">
                                <ComboBoxItem Content="Filtrer sur 'Adam'"/><ComboBoxItem Content="Filtrer sur 'Barbara'"/>
                            </ComboBox>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <CheckBox Content="Case Ã  cocher" Style="{DynamicResource StandardCheckBoxStyle}" Margin="0,0,20,0"/>
                                <RadioButton GroupName="Group1" Content="Option Radio" Style="{DynamicResource StandardRadioButtonStyle}" IsChecked="True"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
            
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                 <StackPanel Grid.Row="0">
                    <GroupBox Style="{DynamicResource SectionGroupBoxStyle}">
                        <GroupBox.Header><TextBlock Text="DataGrid (Style Final)" Style="{DynamicResource GroupBoxHeaderTextStyle}"/></GroupBox.Header>
                        <DataGrid x:Name="ShowcaseDataGrid" MaxHeight="250" Style="{DynamicResource StandardDataGridStyle}" ColumnHeaderStyle="{DynamicResource StandardDataGridColumnHeaderStyle}" RowStyle="{DynamicResource StandardDataGridRowStyle}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="âœ“" Width="Auto"><DataGridTemplateColumn.CellTemplate><DataTemplate><CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource StandardCheckBoxStyle}" HorizontalAlignment="Center"/></DataTemplate></DataGridTemplateColumn.CellTemplate></DataGridTemplateColumn>
                                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="*"/><DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/><DataGridTextColumn Header="Statut" Binding="{Binding Status}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </StackPanel>

                <GroupBox Grid.Row="1" Style="{DynamicResource SectionGroupBoxStyle}">
                    <GroupBox.Header><TextBlock Text="TreeView" Style="{DynamicResource GroupBoxHeaderTextStyle}"/></GroupBox.Header>
                    <TreeView x:Name="ShowcaseTreeView" Style="{DynamicResource StandardTreeViewStyle}" ItemContainerStyle="{DynamicResource StandardTreeViewItemStyle}" MaxHeight="200"/>
                </GroupBox>

                <GroupBox Grid.Row="2" Style="{DynamicResource SectionGroupBoxStyle}">
                    <GroupBox.Header><TextBlock Text="RichTextBox (Logs)" Style="{DynamicResource GroupBoxHeaderTextStyle}"/></GroupBox.Header>
                    <RichTextBox x:Name="ShowcaseLogBox" Style="{DynamicResource LogRichTextBoxStyle}" Height="150"/>
                </GroupBox>
            </Grid>
        </Grid>
        
        <!-- === CORRECTION : Pied de page rÃ©organisÃ© avec un DockPanel === -->
        <Border Grid.Row="2" 
                Background="{DynamicResource Neutral.Background.Header}" 
                BorderThickness="0,1,0,0" 
                BorderBrush="{DynamicResource Neutral.Border.Normal}">
            <DockPanel>
                <!-- La barre de progression est "dockÃ©e" en haut de cette zone -->
                <ProgressBar x:Name="ShowcaseProgressBar" 
                             DockPanel.Dock="Top" 
                             Style="{DynamicResource DiscreteProgressBarStyle}"/>

                <!-- La barre de statut prend le reste de l'espace -->
                <Grid Margin="20,10">
                    <TextBlock Text="Barre de statut prÃªte." VerticalAlignment="Center" Foreground="{DynamicResource Neutral.Text.Dark}"/>
                    <Button Content="Action Pied de Page" Style="{DynamicResource PrimaryButtonStyle}" HorizontalAlignment="Right"/>
                </Grid>
            </DockPanel>
        </Border>
    </Grid>
</Window>