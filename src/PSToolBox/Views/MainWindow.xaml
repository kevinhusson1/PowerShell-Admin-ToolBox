<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PowerShell Admin ToolBox"
    Height="740" Width="680"
    WindowStartupLocation="CenterScreen"
    Background="{DynamicResource Neutral.Background.Window}"
    FontFamily="{DynamicResource UIFont}">

    <!-- Définition du style pour nos tuiles -->
    <Window.Resources>
        <Style x:Key="ToolTileStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="TileBorder" Width="110" Height="125"
                                Background="White" 
                                BorderBrush="{DynamicResource Neutral.Border.Normal}"
                                BorderThickness="1" CornerRadius="4" Padding="5"
                                Cursor="Hand">
                            <!-- L'ombre portée pour l'effet de profondeur -->
                            <Border.Effect>
                                <DropShadowEffect x:Name="TileShadow" ShadowDepth="2" Color="#E0E0E0" Opacity="0.4" BlurRadius="5"/>
                            </Border.Effect>
                            <!-- Permet aux animations de se faire depuis le centre de la tuile -->
                            <Border.RenderTransform>
                                <ScaleTransform CenterX="55" CenterY="62.5"/>
                            </Border.RenderTransform>
                            
                            <!-- Le contenu de la tuile reste le même -->
                            <Grid>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="{Binding AbsoluteDisplayIconPath}" Width="64" Height="64" Margin="0,0,0,8" Stretch="Uniform"/>
                                    <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="SemiBold" TextAlignment="Center"
                                               TextWrapping="Wrap" MaxHeight="32" Foreground="{DynamicResource Neutral.Text.Dark}"
                                               ToolTip="{Binding Name}"/> 
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Définition des animations et des changements d'état -->
                        <ControlTemplate.Triggers>
                            <!-- Trigger pour le survol de la souris -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TileBorder" Property="BorderBrush" Value="{DynamicResource Primary.Brush}"/>
                                <Setter TargetName="TileBorder" Property="Background" Value="{DynamicResource Neutral.Background.Hover}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="TileBorder" Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.03" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="TileBorder" Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.03" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="TileShadow" Storyboard.TargetProperty="ShadowDepth" To="4" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="TileShadow" Storyboard.TargetProperty="BlurRadius" To="10" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="TileBorder" Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.0" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="TileBorder" Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.0" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="TileShadow" Storyboard.TargetProperty="ShadowDepth" To="2" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="TileShadow" Storyboard.TargetProperty="BlurRadius" To="5" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            
                            <!-- Trigger pour l'élément sélectionné -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TileBorder" Property="BorderBrush" Value="{DynamicResource Primary.Brush}"/>
                                <Setter TargetName="TileBorder" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="TileBorder" Property="Background" Value="{DynamicResource Neutral.Background.Selected}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- L'en-tête reste inchangé -->
        <DockPanel Grid.Row="0" Margin="20,10,20,10">
            <Border Background="{DynamicResource Primary.Brush}" Width="60" Height="60" CornerRadius="30" DockPanel.Dock="Left">
                <TextBlock Text="🛠️" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Admin ToolBox" Style="{DynamicResource H1Style}"/>
                <TextBlock Text="Sélecteur d'outils d'administration" Style="{DynamicResource H2Style}"/>
            </StackPanel>
        </DockPanel>

        <!-- Le ListBox applique maintenant notre nouveau style -->
        <Border Grid.Row="1" BorderBrush="{DynamicResource Neutral.Border.Normal}" BorderThickness="1" Background="White" Margin="20,0,20,0" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ListBox ItemsSource="{Binding Tools}"
                         SelectedItem="{Binding SelectedTool, Mode=TwoWay}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         BorderThickness="0"
                         Background="Transparent"
                         ItemContainerStyle="{StaticResource ToolTileStyle}"> <!-- APPLICATION DU STYLE ICI -->
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Le reste du fichier (Description, Barre de statut) est inchangé -->
        <Border Grid.Row="2" Background="White" BorderBrush="{DynamicResource Neutral.Border.Normal}" BorderThickness="1" Margin="20,10,20,15" Padding="15" MinHeight="70">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding SelectedTool.Description}" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="{DynamicResource Neutral.Text.Normal}" FontSize="13" LineHeight="18"/>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="3" Background="{DynamicResource Neutral.Background.Header}" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource Neutral.Border.Normal}" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Prêt." VerticalAlignment="Center" Foreground="{DynamicResource Neutral.Text.Dark}"/>
                <Button Grid.Column="1" Content="Lancer l'outil" Style="{DynamicResource PrimaryButtonStyle}" Command="{Binding LaunchToolCommand}" IsEnabled="{Binding IsToolSelected}"/>
            </Grid>
        </Border>
    </Grid>
</Window>