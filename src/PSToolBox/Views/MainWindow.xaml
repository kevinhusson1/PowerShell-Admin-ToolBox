<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PowerShell Admin ToolBox"
    Height="740" Width="680"
    WindowStartupLocation="CenterScreen"
    Background="{DynamicResource Neutral.Background.Window}"
    FontFamily="{DynamicResource UIFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- En-tête -->
            <RowDefinition Height="*"/>    <!-- Grille des outils -->
            <RowDefinition Height="Auto"/> <!-- Zone de description -->
            <RowDefinition Height="Auto"/> <!-- Barre de statut -->
        </Grid.RowDefinitions>

        <!-- ======================= EN-TÊTE ======================= -->
        <DockPanel Grid.Row="0" Margin="20,10,20,10">
            <Border Background="{DynamicResource Primary.Brush}" Width="60" Height="60" CornerRadius="30" DockPanel.Dock="Left">
                <TextBlock Text="🛠️" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Admin ToolBox" Style="{DynamicResource H1Style}"/>
                <TextBlock Text="Sélecteur d'outils d'administration" Style="{DynamicResource H2Style}"/>
            </StackPanel>
        </DockPanel>

        <!-- ======================= GRILLE DES OUTILS ======================= -->
        <Border Grid.Row="1" BorderBrush="{DynamicResource Neutral.Border.Normal}" BorderThickness="1" Background="White" Margin="20,0,20,0" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ListBox ItemsSource="{Binding Tools}"
                         SelectedItem="{Binding SelectedTool, Mode=TwoWay}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         BorderThickness="0"
                         Background="Transparent">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" ItemWidth="120" ItemHeight="135"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="TileBorder" Width="110" Height="125" Margin="5"
                                    Background="Transparent" 
                                    BorderBrush="{DynamicResource Neutral.Border.Normal}"
                                    BorderThickness="1" CornerRadius="4" Padding="5"
                                    Cursor="Hand">
                                <Grid>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Source="{Binding AbsoluteDisplayIconPath}" Width="64" Height="64" Margin="0,0,0,8" Stretch="Uniform"/>
                                        <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="SemiBold" TextAlignment="Center"
                                                   TextWrapping="Wrap" MaxHeight="32" Foreground="{DynamicResource Neutral.Text.Dark}"
                                                   ToolTip="{Binding Name}"/> 
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter TargetName="TileBorder" Property="BorderBrush" Value="{DynamicResource Primary.Brush}"/>
                                    <Setter TargetName="TileBorder" Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- ======================= ZONE DE DESCRIPTION ======================= -->
        <Border Grid.Row="2" Background="White" BorderBrush="{DynamicResource Neutral.Border.Normal}" 
                BorderThickness="1" Margin="20,10,20,15" Padding="15" MinHeight="70">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding SelectedTool.Description}"
                           TextWrapping="Wrap" VerticalAlignment="Top"
                           Foreground="{DynamicResource Neutral.Text.Normal}"
                           FontSize="13" LineHeight="18"/>
            </ScrollViewer>
        </Border>

        <!-- ======================= BARRE DE STATUT ======================= -->
        <Border Grid.Row="3" Background="{DynamicResource Neutral.Background.Header}" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource Neutral.Border.Normal}" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Prêt." VerticalAlignment="Center" Foreground="{DynamicResource Neutral.Text.Dark}"/>
                <Button Grid.Column="1" Content="Lancer l'outil"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Command="{Binding LaunchToolCommand}"
                        IsEnabled="{Binding IsToolSelected}"/>
            </Grid>
        </Border>
    </Grid>
</Window>