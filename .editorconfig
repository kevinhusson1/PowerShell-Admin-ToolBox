root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# files
[*.cs]
indent_size = 4
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion
csharp_new_line_before_open_brace = all
csharp_space_after_keywords_in_control_flow_statements = true
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion
dotnet_naming_rule.private_members_with_underscore.symbols = private_members_with_underscore
dotnet_naming_rule.private_members_with_underscore.style = prefix_underscore
dotnet_naming_symbols.private_members_with_underscore.applicable_kinds = field
dotnet_naming_symbols.private_members_with_underscore.applicable_accessibilities = private
dotnet_naming_style.prefix_underscore.capitalization = camel_case
dotnet_naming_style.prefix_underscore.required_prefix = _

# PowerShell files
[*.ps1,*.psm1,*.psd1]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# XML/XAML files
[*.{xml,xaml}]
indent_size = 2
