<Window x:Class="SystemInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToolBox - Informations Système" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="🖥️ Informations Système" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="📋 Informations générales" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="ComputerName" Margin="20,0,0,5"/>
                <TextBlock x:Name="UserName" Margin="20,0,0,5"/>
                <TextBlock x:Name="OSVersion" Margin="20,0,0,5"/>
                
                <TextBlock Text="💾 Mémoire" FontWeight="Bold" Margin="0,20,0,10"/>
                <TextBlock x:Name="TotalRAM" Margin="20,0,0,5"/>
                <TextBlock x:Name="FreeRAM" Margin="20,0,0,5"/>
                
                <TextBlock Text="🔄 PowerShell" FontWeight="Bold" Margin="0,20,0,10"/>
                <TextBlock x:Name="PSVersion" Margin="20,0,0,5"/>
                <TextBlock x:Name="PSEdition" Margin="20,0,0,5"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Button Grid.Row="2" 
                Content="Fermer" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                x:Name="CloseButton"/>
    </Grid>
</Window>