<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToolBox - Vitrine de Styles" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Import des styles globaux -->
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            
            <!-- Couleurs sémantiques locales pour test -->
            <Color x:Key="SuccessColor">#059669</Color>
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
            
            <Color x:Key="WarningColor">#D97706</Color>
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
            
            <Color x:Key="ErrorColor">#DC2626</Color>
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
            
            <Color x:Key="InfoColor">#0EA5E9</Color>
            <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />
            
            <!-- Gris neutres locaux -->
            <Color x:Key="NeutralGray100">#F1F5F9</Color>
            <Color x:Key="NeutralGray300">#CBD5E1</Color>
            <Color x:Key="NeutralGray500">#64748B</Color>
            <Color x:Key="NeutralGray700">#334155</Color>
            
            <SolidColorBrush x:Key="NeutralGray100Brush" Color="{StaticResource NeutralGray100}" />
            <SolidColorBrush x:Key="NeutralGray300Brush" Color="{StaticResource NeutralGray300}" />
            <SolidColorBrush x:Key="NeutralGray500Brush" Color="{StaticResource NeutralGray500}" />
            <SolidColorBrush x:Key="NeutralGray700Brush" Color="{StaticResource NeutralGray700}" />
            
            <!-- Espacements -->
            <Thickness x:Key="MediumMargin">8</Thickness>
            <Thickness x:Key="LargeMargin">16</Thickness>
            <Thickness x:Key="MediumPadding">8</Thickness>
            <Thickness x:Key="LargePadding">16</Thickness>
            <CornerRadius x:Key="SmallCornerRadius">2</CornerRadius>
            <CornerRadius x:Key="MediumCornerRadius">4</CornerRadius>
            
            <!-- Styles de texte locaux -->
            <Style x:Key="HeaderText" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Margin" Value="0,0,0,12" />
            </Style>
            
            <Style x:Key="BodyText" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>
            
            <!-- Style carte simple -->
            <Style x:Key="SimpleCard" TargetType="{x:Type Border}">
                <Setter Property="Background" Value="{DynamicResource SystemColors.WindowBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource NeutralGray300Brush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="{StaticResource MediumCornerRadius}" />
                <Setter Property="Padding" Value="{StaticResource LargePadding}" />
                <Setter Property="Margin" Value="{StaticResource MediumMargin}" />
            </Style>
            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Background" Value="{DynamicResource SystemColors.WindowBrush}" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- En-tête -->
        <Border Grid.Row="0" 
                Background="{StaticResource NeutralGray100Brush}"
                BorderBrush="{StaticResource NeutralGray300Brush}"
                BorderThickness="0,0,0,1"
                Padding="{StaticResource LargePadding}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="🎨 Vitrine de Styles ToolBox" 
                               Style="{StaticResource HeaderText}"/>
                    <TextBlock Text="Référence complète des styles et contrôles disponibles"
                               Style="{StaticResource BodyText}"
                               Foreground="{StaticResource NeutralGray500Brush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📋 Copier XAML" 
                            Margin="0,0,8,0"
                            x:Name="CopyXamlButton"/>
                    <Button Content="🔗 Documentation" 
                            x:Name="DocumentationButton"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Contenu principal avec onglets -->
        <TabControl Grid.Row="1" Margin="{StaticResource MediumMargin}">
            
            <!-- Onglet Couleurs -->
            <TabItem Header="🎨 Couleurs">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="{StaticResource MediumPadding}">
                    <StackPanel>
                        
                        <!-- Section Couleurs d'accent -->
                        <TextBlock Text="Couleurs d'Accent Système" Style="{StaticResource HeaderText}"/>
                        <Border Style="{StaticResource SimpleCard}">
                            <StackPanel>
                                <TextBlock Text="💡 Ces couleurs s'adaptent automatiquement aux préférences utilisateur Windows 11" 
                                           Style="{StaticResource BodyText}" 
                                           Foreground="{StaticResource NeutralGray500Brush}"
                                           Margin="0,0,0,12"/>
                                <WrapPanel>
                                    <Border Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" 
                                            Width="80" Height="60" Margin="4"
                                            CornerRadius="{StaticResource SmallCornerRadius}">
                                        <TextBlock Text="Accent" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                   Foreground="White" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" 
                                            Width="80" Height="60" Margin="4"
                                            CornerRadius="{StaticResource SmallCornerRadius}">
                                        <TextBlock Text="Light 1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                   Foreground="White" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" 
                                            Width="80" Height="60" Margin="4"
                                            CornerRadius="{StaticResource SmallCornerRadius}">
                                        <TextBlock Text="Light 2" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                   Foreground="White" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" 
                                            Width="80" Height="60" Margin="4"
                                            CornerRadius="{StaticResource SmallCornerRadius}">
                                        <TextBlock Text="Dark 1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                   Foreground="White" FontWeight="Medium"/>
                                    </Border>
                                </WrapPanel>
                                
                                <!-- Exemple d'utilisation -->
                                <TextBlock Text="Exemple d'utilisation :" Style="{StaticResource BodyText}" FontWeight="Medium" Margin="0,16,0,8"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Bouton Accent" 
                                            Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="12,6"
                                            Margin="0,0,8,0"/>
                                    <Button Content="Bouton Clair" 
                                            Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                                            Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                                            Padding="12,6"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Section Couleurs sémantiques -->
                        <TextBlock Text="Couleurs Sémantiques" Style="{StaticResource HeaderText}"/>
                        <Border Style="{StaticResource SimpleCard}">
                            <WrapPanel>
                                <Border Background="{StaticResource SuccessBrush}" 
                                        Width="80" Height="60" Margin="4"
                                        CornerRadius="{StaticResource SmallCornerRadius}">
                                    <TextBlock Text="Success" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="White" FontWeight="Medium"/>
                                </Border>
                                <Border Background="{StaticResource WarningBrush}" 
                                        Width="80" Height="60" Margin="4"
                                        CornerRadius="{StaticResource SmallCornerRadius}">
                                    <TextBlock Text="Warning" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="White" FontWeight="Medium"/>
                                </Border>
                                <Border Background="{StaticResource ErrorBrush}" 
                                        Width="80" Height="60" Margin="4"
                                        CornerRadius="{StaticResource SmallCornerRadius}">
                                    <TextBlock Text="Error" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="White" FontWeight="Medium"/>
                                </Border>
                                <Border Background="{StaticResource InfoBrush}" 
                                        Width="80" Height="60" Margin="4"
                                        CornerRadius="{StaticResource SmallCornerRadius}">
                                    <TextBlock Text="Info" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="White" FontWeight="Medium"/>
                                </Border>
                            </WrapPanel>
                        </Border>
                        
                        <!-- Section Gris neutres -->
                        <TextBlock Text="Gris Neutres" Style="{StaticResource HeaderText}"/>
                        <Border Style="{StaticResource SimpleCard}">
                            <WrapPanel>
                                <Border Background="{StaticResource NeutralGray100Brush}" 
                                        Width="80" Height="60" Margin="4"
                                        CornerRadius="{StaticResource SmallCornerRadius}">
                                    <TextBlock Text="Gray 100" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="{StaticResource NeutralGray700Brush}" FontWeight="Medium"/>
                                </Border>
                                <Border Background="{StaticResource NeutralGray300Brush}" 
                                        Width="80" Height="60" Margin="4"
                                        CornerRadius="{StaticResource SmallCornerRadius}">
                                    <TextBlock Text="Gray 300" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="{StaticResource NeutralGray700Brush}" FontWeight="Medium"/>
                                </Border>
                                <Border Background="{StaticResource NeutralGray500Brush}" 
                                        Width="80" Height="60" Margin="4"
                                        CornerRadius="{StaticResource SmallCornerRadius}">
                                    <TextBlock Text="Gray 500" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="White" FontWeight="Medium"/>
                                </Border>
                                <Border Background="{StaticResource NeutralGray700Brush}" 
                                        Width="80" Height="60" Margin="4"
                                        CornerRadius="{StaticResource SmallCornerRadius}">
                                    <TextBlock Text="Gray 700" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="White" FontWeight="Medium"/>
                                </Border>
                            </WrapPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Onglet Typographie -->
            <TabItem Header="📝 Typographie">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="{StaticResource MediumPadding}">
                    <StackPanel>
                        
                        <TextBlock Text="Hiérarchie Typographique" Style="{StaticResource HeaderText}"/>
                        <Border Style="{StaticResource SimpleCard}">
                            <StackPanel>
                                <TextBlock Text="📝 Basé sur Segoe UI - Police système Windows" 
                                           Style="{StaticResource BodyText}" 
                                           Foreground="{StaticResource NeutralGray500Brush}"
                                           Margin="0,0,0,12"/>
                                <TextBlock Text="Titre Principal (Header)" Style="{StaticResource HeaderText}"/>
                                <TextBlock Text="Texte de corps standard qui permet de présenter des informations détaillées. Ce style est utilisé pour le contenu principal et les descriptions." 
                                           Style="{StaticResource BodyText}" Margin="0,8,0,0"/>
                                <TextBlock Text="Segoe UI - Police par défaut" FontFamily="Segoe UI" FontSize="12" Margin="0,8,0,0"/>
                                
                                <!-- Exemple avec différentes tailles -->
                                <TextBlock Text="Tailles disponibles :" Style="{StaticResource BodyText}" FontWeight="Medium" Margin="0,16,0,8"/>
                                <StackPanel>
                                    <TextBlock Text="Très grand titre (24px)" FontSize="24" FontWeight="SemiBold"/>
                                    <TextBlock Text="Grand titre (18px)" FontSize="18" FontWeight="SemiBold"/>
                                    <TextBlock Text="Titre moyen (16px)" FontSize="16" FontWeight="Medium"/>
                                    <TextBlock Text="Texte normal (12px)" FontSize="12"/>
                                    <TextBlock Text="Petit texte (10px)" FontSize="10" Foreground="{StaticResource NeutralGray500Brush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Onglet Boutons -->
            <TabItem Header="🔘 Boutons">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="{StaticResource MediumPadding}">
                    <StackPanel>
                        
                        <TextBlock Text="Types de Boutons" Style="{StaticResource HeaderText}"/>
                        <Border Style="{StaticResource SimpleCard}">
                            <StackPanel>
                                <TextBlock Text="🔘 Styles basés sur le Fluent Theme .NET 9" 
                                           Style="{StaticResource BodyText}" 
                                           Foreground="{StaticResource NeutralGray500Brush}"
                                           Margin="0,0,0,12"/>
                                           
                                <TextBlock Text="Boutons Standard :" Style="{StaticResource BodyText}" FontWeight="Medium"/>
                                <WrapPanel Margin="0,8,0,16">
                                    <Button Content="Bouton Normal" Margin="0,0,8,8"/>
                                    <Button Content="Avec Accent" 
                                            Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Margin="0,0,8,8"/>
                                    <Button Content="Désactivé" IsEnabled="False" Margin="0,0,8,8"/>
                                </WrapPanel>
                                
                                <TextBlock Text="Boutons Sémantiques :" Style="{StaticResource BodyText}" FontWeight="Medium"/>
                                <WrapPanel Margin="0,8,0,16">
                                    <Button Content="Succès" 
                                            Background="{StaticResource SuccessBrush}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Margin="0,0,8,8"/>
                                    <Button Content="Avertissement" 
                                            Background="{StaticResource WarningBrush}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Margin="0,0,8,8"/>
                                    <Button Content="Erreur" 
                                            Background="{StaticResource ErrorBrush}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Margin="0,0,8,8"/>
                                </WrapPanel>
                                
                                <TextBlock Text="Différentes Tailles :" Style="{StaticResource BodyText}" FontWeight="Medium"/>
                                <WrapPanel Margin="0,8,0,0">
                                    <Button Content="Petit" Height="24" Padding="8,2" FontSize="10" Margin="0,0,8,8"/>
                                    <Button Content="Normal" Height="32" Padding="12,6" Margin="0,0,8,8"/>
                                    <Button Content="Grand" Height="40" Padding="16,8" FontSize="14" Margin="0,0,8,8"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Onglet Champs -->
            <TabItem Header="📝 Champs">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="{StaticResource MediumPadding}">
                    <StackPanel>
                        
                        <TextBlock Text="Champs de Saisie" Style="{StaticResource HeaderText}"/>
                        <Border Style="{StaticResource SimpleCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="TextBox :" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" 
                                         Text="Exemple de texte" Margin="0,0,0,8"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="ComboBox :" VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" 
                                          SelectedIndex="0" Margin="0,0,0,8">
                                    <ComboBoxItem Content="Option 1"/>
                                    <ComboBoxItem Content="Option 2"/>
                                    <ComboBoxItem Content="Option 3"/>
                                </ComboBox>
                                
                                <Label Grid.Row="2" Grid.Column="0" Content="Désactivé :" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1" 
                                         Text="Champ désactivé" IsEnabled="False" Margin="0,0,0,8"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Content="PasswordBox :" VerticalAlignment="Center"/>
                                <PasswordBox Grid.Row="3" Grid.Column="1" 
                                             Password="example123"/>
                            </Grid>
                        </Border>
                        
                        <!-- Section CheckBoxes et RadioButtons -->
                        <TextBlock Text="Cases et Boutons Radio" Style="{StaticResource HeaderText}"/>
                        <Border Style="{StaticResource SimpleCard}">
                            <StackPanel>
                                <TextBlock Text="Cases à cocher :" Style="{StaticResource BodyText}" FontWeight="Medium" Margin="0,0,0,8"/>
                                <StackPanel Margin="0,0,0,16">
                                    <CheckBox Content="Option activée" IsChecked="True" Margin="0,0,0,4"/>
                                    <CheckBox Content="Option désactivée" IsChecked="False" Margin="0,0,0,4"/>
                                    <CheckBox Content="Option indéterminée" IsChecked="{x:Null}" Margin="0,0,0,4"/>
                                    <CheckBox Content="Option désactivée" IsEnabled="False" Margin="0,0,0,4"/>
                                </StackPanel>
                                
                                <TextBlock Text="Boutons radio :" Style="{StaticResource BodyText}" FontWeight="Medium" Margin="0,0,0,8"/>
                                <StackPanel>
                                    <RadioButton Content="Choix 1" GroupName="ExampleGroup" IsChecked="True" Margin="0,0,0,4"/>
                                    <RadioButton Content="Choix 2" GroupName="ExampleGroup" Margin="0,0,0,4"/>
                                    <RadioButton Content="Choix 3" GroupName="ExampleGroup" Margin="0,0,0,4"/>
                                    <RadioButton Content="Choix désactivé" GroupName="ExampleGroup" IsEnabled="False" Margin="0,0,0,4"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
        </TabControl>
        
        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource NeutralGray100Brush}"
                BorderBrush="{StaticResource NeutralGray300Brush}"
                BorderThickness="0,1,0,0"
                Padding="{StaticResource MediumPadding}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="💡 Cette vitrine évolue avec le système de design. Les styles utilisent le Fluent Theme .NET 9."
                           Style="{StaticResource BodyText}"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource NeutralGray500Brush}"/>
                
                <Button Grid.Column="1" 
                        Content="Fermer" 
                        x:Name="CloseButton"/>
            </Grid>
        </Border>
    </Grid>
</Window>