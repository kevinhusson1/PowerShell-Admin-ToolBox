<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="ToolBox - Vitrine de Styles Complete" 
        Height="900" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource ToolBoxWindow}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- EN-TÊTE -->
        <Border Grid.Row="0" Style="{DynamicResource ToolBoxCardFlat}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Vitrine Complete des Controles WPF" 
                               Style="{DynamicResource ToolBoxHeaderText}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Base pour implementation du design Fluent .NET 9"
                               Style="{DynamicResource ToolBoxSecondaryText}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📋 Copier XAML" 
                            Style="{DynamicResource ToolBoxOutlineButton}"
                            Margin="0,0,8,0"
                            x:Name="CopyXamlButton"/>
                    <Button Content="🔗 Documentation" 
                            Style="{DynamicResource ToolBoxSecondaryButton}"
                            x:Name="DocumentationButton"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- CONTENU AVEC ONGLETS ÉTENDUS -->
        <TabControl Grid.Row="1" Style="{DynamicResource ToolBoxTabControl}">
            
            <!-- ONGLET 1: CHAMPS DE SAISIE -->
            <TabItem Header="📝 Champs de Saisie" Style="{DynamicResource ToolBoxTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        
                        <!-- Section TextBox et variantes -->
                        <TextBlock Text="Champs de Texte" Style="{DynamicResource ToolBoxSubHeaderText}"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="TextBox Standard :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="Texte de démonstration" Style="{DynamicResource ToolBoxTextBox}" Margin="0,0,0,8"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="TextBox Focus Test :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="Cliquez ici pour tester le focus" Style="{DynamicResource ToolBoxTextBox}" x:Name="FocusTextBox" Margin="0,0,0,8"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Content="TextBox Désactivé :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="Champ désactivé" Style="{DynamicResource ToolBoxTextBox}" IsEnabled="False" Margin="0,0,0,8"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Content="PasswordBox :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <PasswordBox Grid.Row="3" Grid.Column="1" Password="motdepasse123" Style="{DynamicResource ToolBoxPasswordBox}" Margin="0,0,0,8"/>
                                
                                <Label Grid.Row="4" Grid.Column="0" Content="TextBox Multiligne :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Text="Ligne 1
Ligne 2
Ligne 3" Style="{DynamicResource ToolBoxMultilineTextBox}" Height="80" Margin="0,0,0,8"/>
                                
                                <Label Grid.Row="5" Grid.Column="0" Content="RichTextBox :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <RichTextBox Grid.Row="5" Grid.Column="1" Height="80" Margin="0,0,0,8">
                                    <FlowDocument>
                                        <Paragraph>
                                            <Run Text="Texte normal. "/>
                                            <Run Text="Texte en gras." FontWeight="Bold"/>
                                            <Run Text=" Texte en italique." FontStyle="Italic"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                            </Grid>
                        </Border>
                        
                        <!-- Section ComboBox et Listes -->
                        <TextBlock Text="Listes et Sélection" Style="{DynamicResource ToolBoxSubHeaderText}" Margin="0,24,0,0"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="ComboBox Standard :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" Style="{DynamicResource ToolBoxComboBox}" SelectedIndex="0" Margin="0,0,0,8">
                                    <ComboBoxItem Content="Option 1"/>
                                    <ComboBoxItem Content="Option 2"/>
                                    <ComboBoxItem Content="Option 3"/>
                                </ComboBox>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="ComboBox Éditable :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" Style="{DynamicResource ToolBoxEditableComboBox}" Text="Filtrable..." Margin="0,0,0,8">
                                    <ComboBoxItem Content="Apple"/>
                                    <ComboBoxItem Content="Banana"/>
                                    <ComboBoxItem Content="Cherry"/>
                                </ComboBox>
                                
                                <Label Grid.Row="2" Grid.Column="0" Content="ComboBox PowerShell :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Style="{DynamicResource ToolBoxComboBox}" x:Name="PowerShellComboBox" Margin="0,0,0,8"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Content="ListBox :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <ListBox Grid.Row="3" Grid.Column="1" Height="100" Margin="0,0,0,8" Style="{DynamicResource ToolBoxListBox}">
                                    <ListBoxItem Content="Élément de liste 1"/>
                                    <ListBoxItem Content="Élément de liste 2" IsSelected="True"/>
                                    <ListBoxItem Content="Élément de liste 3"/>
                                    <ListBoxItem Content="Élément de liste 4"/>
                                </ListBox>
                            </Grid>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- ONGLET 2: BOUTONS ET INTERACTIONS -->
            <TabItem Header="🔘 Boutons et Interactions" Style="{DynamicResource ToolBoxTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        
                        <!-- Section Boutons -->
                        <TextBlock Text="Boutons Standard" Style="{DynamicResource ToolBoxSubHeaderText}"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <StackPanel>
                                <WrapPanel Margin="0,0,0,16">
                                    <Button Content="Primary" Style="{DynamicResource ToolBoxPrimaryButton}" Margin="0,0,12,8"/>
                                    <Button Content="Secondary" Style="{DynamicResource ToolBoxSecondaryButton}" Margin="0,0,12,8"/>
                                    <Button Content="Success" Style="{DynamicResource ToolBoxSuccessButton}" Margin="0,0,12,8"/>
                                    <Button Content="Warning" Style="{DynamicResource ToolBoxWarningButton}" Margin="0,0,12,8"/>
                                    <Button Content="Danger" Style="{DynamicResource ToolBoxDangerButton}" Margin="0,0,12,8"/>
                                    <Button Content="Outline" Style="{DynamicResource ToolBoxOutlineButton}" Margin="0,0,12,8"/>
                                </WrapPanel>
                                
                                <WrapPanel>
                                    <Button Content="Désactivé" Style="{DynamicResource ToolBoxPrimaryButton}" IsEnabled="False" Margin="0,0,12,8"/>
                                    <ToggleButton Content="Toggle Button" Margin="0,0,12,8"/>
                                    <RepeatButton Content="Repeat Button" Margin="0,0,12,8"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Section CheckBox et RadioButton -->
                        <TextBlock Text="Cases à Cocher et Boutons Radio" Style="{DynamicResource ToolBoxSubHeaderText}" Margin="0,24,0,0"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="CheckBox :" FontWeight="Medium" Margin="0,0,0,8"/>
                                    <CheckBox Content="Option cochée" IsChecked="True" Style="{DynamicResource ToolBoxCheckBox}"/>
                                    <CheckBox Content="Option non cochée" Style="{DynamicResource ToolBoxCheckBox}"/>
                                    <CheckBox Content="Option désactivée" IsEnabled="False" Style="{DynamicResource ToolBoxCheckBox}"/>
                                    <CheckBox Content="Indéterminé" IsThreeState="True" IsChecked="{x:Null}" Style="{DynamicResource ToolBoxCheckBox}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="RadioButton :" FontWeight="Medium" Margin="0,0,0,8"/>
                                    <RadioButton Content="Choix 1" IsChecked="True" GroupName="Group1" Style="{DynamicResource ToolBoxRadioButton}"/>
                                    <RadioButton Content="Choix 2" GroupName="Group1" Style="{DynamicResource ToolBoxRadioButton}"/>
                                    <RadioButton Content="Choix 3" GroupName="Group1" Style="{DynamicResource ToolBoxRadioButton}"/>
                                    <RadioButton Content="Désactivé" IsEnabled="False" GroupName="Group1" Style="{DynamicResource ToolBoxRadioButton}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Section Slider et autres contrôles -->
                        <TextBlock Text="Contrôles de Valeur" Style="{DynamicResource ToolBoxSubHeaderText}" Margin="0,24,0,0"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="Slider :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <Slider Grid.Row="0" Grid.Column="1" Value="50" Minimum="0" Maximum="100" Margin="0,0,0,16"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="ProgressBar :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <ProgressBar Grid.Row="1" Grid.Column="1" Value="75" Minimum="0" Maximum="100" Height="20" Margin="0,0,0,16"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Content="ProgressBar Indéterminé :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                <ProgressBar Grid.Row="2" Grid.Column="1" IsIndeterminate="True" Height="20"/>
                            </Grid>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- ONGLET 3: DONNÉES ET GRILLES -->
            <TabItem Header="📊 Données et Grilles" Style="{DynamicResource ToolBoxTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        
                        <!-- Section DataGrid -->
                        <TextBlock Text="DataGrid" Style="{DynamicResource ToolBoxSubHeaderText}"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <DataGrid x:Name="DemoDataGrid" Height="200" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Style="{DynamicResource ToolBoxDataGrid}">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="Sélection" Binding="{Binding IsSelected}" Width="80"/>
                                    <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="150"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                                    <DataGridComboBoxColumn Header="Statut" SelectedItemBinding="{Binding Status}" Width="120">
                                        <DataGridComboBoxColumn.ItemsSource>
                                            <x:Array Type="{x:Type sys:String}">
                                                <sys:String>Actif</sys:String>
                                                <sys:String>Inactif</sys:String>
                                                <sys:String>En attente</sys:String>
                                            </x:Array>
                                        </DataGridComboBoxColumn.ItemsSource>
                                    </DataGridComboBoxColumn>
                                    <DataGridTextColumn Header="Dernière connexion" Binding="{Binding LastLogin}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                        
                        <!-- Section ListView avec différents modes -->
                        <TextBlock Text="ListView - Modes d'affichage" Style="{DynamicResource ToolBoxSubHeaderText}" Margin="0,24,0,0"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="200"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <RadioButton Content="Liste" x:Name="ListViewMode" IsChecked="True" Margin="0,0,16,0"/>
                                    <RadioButton Content="Détails" x:Name="DetailsViewMode" Margin="0,0,16,0"/>
                                    <RadioButton Content="Icônes" x:Name="IconViewMode"/>
                                </StackPanel>
                                
                                <ListView Grid.Row="1" x:Name="DemoListView" Style="{DynamicResource ToolBoxListView}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Fichier" DisplayMemberBinding="{Binding FileName}" Width="200"/>
                                            <GridViewColumn Header="Taille" DisplayMemberBinding="{Binding Size}" Width="100"/>
                                            <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="150"/>
                                            <GridViewColumn Header="Modifié" DisplayMemberBinding="{Binding Modified}" Width="150"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- ONGLET 4: NAVIGATION ET LAYOUT -->
            <TabItem Header="🧭 Navigation et Layout" Style="{DynamicResource ToolBoxTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        
                        <!-- Section TreeView -->
                        <TextBlock Text="TreeView" Style="{DynamicResource ToolBoxSubHeaderText}"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <TreeView Height="200">
                                <TreeViewItem Header="📁 Dossier racine" IsExpanded="True">
                                    <TreeViewItem Header="📁 Sous-dossier 1" IsExpanded="True">
                                        <TreeViewItem Header="📄 Fichier 1.txt"/>
                                        <TreeViewItem Header="📄 Fichier 2.pdf"/>
                                    </TreeViewItem>
                                    <TreeViewItem Header="📁 Sous-dossier 2">
                                        <TreeViewItem Header="📄 Document.docx"/>
                                        <TreeViewItem Header="🖼️ Image.jpg"/>
                                    </TreeViewItem>
                                    <TreeViewItem Header="📄 Readme.md"/>
                                </TreeViewItem>
                                <TreeViewItem Header="📁 Autre dossier">
                                    <TreeViewItem Header="📄 Script.ps1"/>
                                </TreeViewItem>
                            </TreeView>
                        </Border>
                        
                        <!-- Section Menu -->
                        <TextBlock Text="Menu et ContextMenu" Style="{DynamicResource ToolBoxSubHeaderText}" Margin="0,24,0,0"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <StackPanel>
                                <Menu>
                                    <MenuItem Header="_Fichier">
                                        <MenuItem Header="_Nouveau" InputGestureText="Ctrl+N"/>
                                        <MenuItem Header="_Ouvrir" InputGestureText="Ctrl+O"/>
                                        <MenuItem Header="_Enregistrer" InputGestureText="Ctrl+S"/>
                                        <Separator/>
                                        <MenuItem Header="_Récent">
                                            <MenuItem Header="Document1.txt"/>
                                            <MenuItem Header="Document2.pdf"/>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="_Quitter" InputGestureText="Alt+F4"/>
                                    </MenuItem>
                                    <MenuItem Header="_Édition">
                                        <MenuItem Header="_Couper" InputGestureText="Ctrl+X"/>
                                        <MenuItem Header="C_opier" InputGestureText="Ctrl+C"/>
                                        <MenuItem Header="C_oller" InputGestureText="Ctrl+V"/>
                                    </MenuItem>
                                    <MenuItem Header="_Affichage">
                                        <MenuItem Header="_Barre d'outils" IsCheckable="True" IsChecked="True"/>
                                        <MenuItem Header="_Barre d'état" IsCheckable="True"/>
                                    </MenuItem>
                                    <MenuItem Header="_Aide">
                                        <MenuItem Header="_Documentation"/>
                                        <MenuItem Header="_À propos"/>
                                    </MenuItem>
                                </Menu>
                                
                                <TextBlock Text="Clic droit pour ContextMenu :" Margin="0,16,0,8" FontWeight="Medium"/>
                                <Border Background="LightGray" Height="60" Padding="16">
                                    <TextBlock Text="Zone avec menu contextuel - Clic droit ici" VerticalAlignment="Center"/>
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Couper"/>
                                            <MenuItem Header="Copier"/>
                                            <MenuItem Header="Coller"/>
                                            <Separator/>
                                            <MenuItem Header="Propriétés"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                </Border>
                            </StackPanel>
                        </Border>
                        
                        <!-- Section TabControl imbriqué -->
                        <TextBlock Text="TabControl Imbriqué" Style="{DynamicResource ToolBoxSubHeaderText}" Margin="0,24,0,0"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <TabControl Height="150" Style="{DynamicResource ToolBoxTabControl}">
                                <TabItem Header="Onglet 1" Style="{DynamicResource ToolBoxTabItem}">
                                    <StackPanel Margin="16">
                                        <TextBlock Text="Contenu de l'onglet 1"/>
                                        <CheckBox Content="Option dans l'onglet" Margin="0,8,0,0"/>
                                    </StackPanel>
                                </TabItem>
                                <TabItem Header="Onglet 2" Style="{DynamicResource ToolBoxTabItem}">
                                    <StackPanel Margin="16">
                                        <TextBlock Text="Contenu de l'onglet 2"/>
                                        <Button Content="Action" Margin="0,8,0,0"/>
                                    </StackPanel>
                                </TabItem>
                                <TabItem Header="Onglet 3" Style="{DynamicResource ToolBoxTabItem}">
                                    <TextBox Text="Zone de texte dans l'onglet 3" Margin="16"/>
                                </TabItem>
                            </TabControl>
                        </Border>
                        
                        <!-- Section Expander -->
                        <TextBlock Text="Expander" Style="{DynamicResource ToolBoxSubHeaderText}" Margin="0,24,0,0"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <StackPanel>
                                <Expander Header="Section repliable 1" IsExpanded="True">
                                    <StackPanel Margin="16">
                                        <TextBlock Text="Contenu de la section repliable 1"/>
                                        <Button Content="Action dans expander" HorizontalAlignment="Left" Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Expander>
                                
                                <Expander Header="Section repliable 2" Margin="0,8,0,0">
                                    <Grid Margin="16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Label Grid.Row="0" Grid.Column="0" Content="Paramètre :"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Text="Valeur"/>
                                        <CheckBox Grid.Row="1" Grid.Column="1" Content="Activer cette option" Margin="0,8,0,0"/>
                                    </Grid>
                                </Expander>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- ONGLET 5: CONTENEURS ET LAYOUT -->
            <TabItem Header="📦 Conteneurs et Layout" Style="{DynamicResource ToolBoxTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        
                        <!-- Section GroupBox -->
                        <TextBlock Text="GroupBox et Bordures" Style="{DynamicResource ToolBoxSubHeaderText}"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <GroupBox Grid.Column="0" Header="Groupe 1" Style="{DynamicResource ToolBoxSection}" Margin="0,0,8,0">
                                    <StackPanel>
                                        <RadioButton Content="Option A" IsChecked="True"/>
                                        <RadioButton Content="Option B"/>
                                        <RadioButton Content="Option C"/>
                                    </StackPanel>
                                </GroupBox>
                                
                                <GroupBox Grid.Column="1" Header="Groupe 2" Style="{DynamicResource ToolBoxSection}" Margin="8,0,0,0">
                                    <StackPanel>
                                        <CheckBox Content="Paramètre 1" IsChecked="True"/>
                                        <CheckBox Content="Paramètre 2"/>
                                        <TextBox Text="Valeur" Margin="0,8,0,0"/>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                        </Border>
                        
                        <!-- Section Layouts Panels -->
                        <TextBlock Text="Panels de Layout" Style="{DynamicResource ToolBoxSubHeaderText}" Margin="0,24,0,0"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <StackPanel>
                                
                                <TextBlock Text="StackPanel Horizontal :" FontWeight="Medium" Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <Button Content="Bouton 1" Margin="0,0,8,0"/>
                                    <Button Content="Bouton 2" Margin="0,0,8,0"/>
                                    <Button Content="Bouton 3"/>
                                </StackPanel>
                                
                                <TextBlock Text="WrapPanel :" FontWeight="Medium" Margin="0,0,0,8"/>
                                <WrapPanel Margin="0,0,0,16">
                                    <Button Content="Item 1" Margin="4"/>
                                    <Button Content="Item 2" Margin="4"/>
                                    <Button Content="Item 3" Margin="4"/>
                                    <Button Content="Item 4" Margin="4"/>
                                    <Button Content="Item 5" Margin="4"/>
                                    <Button Content="Item 6" Margin="4"/>
                                    <Button Content="Item 7" Margin="4"/>
                                </WrapPanel>
                                
                                <TextBlock Text="DockPanel :" FontWeight="Medium" Margin="0,0,0,8"/>
                                <DockPanel Height="100" LastChildFill="True" Background="LightGray" Margin="0,0,0,16">
                                    <Button Content="Top" DockPanel.Dock="Top" Height="25"/>
                                    <Button Content="Bottom" DockPanel.Dock="Bottom" Height="25"/>
                                    <Button Content="Left" DockPanel.Dock="Left" Width="60"/>
                                    <Button Content="Right" DockPanel.Dock="Right" Width="60"/>
                                    <TextBlock Text="Centre (Fill)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DockPanel>
                                
                                <TextBlock Text="UniformGrid :" FontWeight="Medium" Margin="0,0,0,8"/>
                                <UniformGrid Rows="2" Columns="3" Height="80">
                                    <Button Content="1"/>
                                    <Button Content="2"/>
                                    <Button Content="3"/>
                                    <Button Content="4"/>
                                    <Button Content="5"/>
                                    <Button Content="6"/>
                                </UniformGrid>
                                
                            </StackPanel>
                        </Border>
                        
                        <!-- Section Grid complexe -->
                        <TextBlock Text="Grid avec Splitter" Style="{DynamicResource ToolBoxSubHeaderText}" Margin="0,24,0,0"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <Grid Height="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Grid.Column="0" Background="LightBlue" Padding="8">
                                    <TextBlock Text="Zone 1 (Haut-Gauche)" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                
                                <GridSplitter Grid.Row="0" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Gray"/>
                                
                                <Border Grid.Row="0" Grid.Column="2" Background="LightGreen" Padding="8">
                                    <TextBlock Text="Zone 2 (Haut-Droite)" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                
                                <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Height="5" VerticalAlignment="Stretch" Background="Gray"/>
                                
                                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="LightCoral" Padding="8">
                                    <TextBlock Text="Zone 3 (Bas - Span 3 colonnes)" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- ONGLET 6: MÉDIA ET AFFICHAGE -->
            <TabItem Header="🖼️ Média et Affichage" Style="{DynamicResource ToolBoxTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        
                        <!-- Section Image et Média -->
                        <TextBlock Text="Images et Média" Style="{DynamicResource ToolBoxSubHeaderText}"/>
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                    <TextBlock Text="Image :" FontWeight="Medium" Margin="0,0,0,8"/>
                                    <Border Background="LightGray" Height="120" Width="150">
                                        <!-- PlaceHolder pour Image - idéalement, une image réelle plus tard -->
                                        <TextBlock Text="[Image placeholder]" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    
                                    <TextBlock Text="Border avec CornerRadius :" FontWeight="Medium" Margin="0,16,0,8"/>
                                    <Border Background="SkyBlue" Height="60" Width="120" CornerRadius="10">
                                        <TextBlock Text="Coins arrondis" VerticalAlignment="Center" HorizontalAlignment="Center"/>
