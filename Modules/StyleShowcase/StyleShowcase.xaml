<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToolBox - Vitrine de Styles V1.1" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource ToolBoxWindow}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- EN-TÊTE -->
        <Border Grid.Row="0" Style="{DynamicResource ToolBoxCardFlat}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="🎨 Vitrine de Styles ToolBox V1.1" 
                               Style="{DynamicResource ToolBoxHeaderText}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Référence complète avec ComboBox corrigées"
                               Style="{DynamicResource ToolBoxSecondaryText}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📋 Copier XAML" 
                            Style="{DynamicResource ToolBoxOutlineButton}"
                            Margin="0,0,8,0"
                            x:Name="CopyXamlButton"/>
                    <Button Content="🔗 Documentation" 
                            Style="{DynamicResource ToolBoxSecondaryButton}"
                            x:Name="DocumentationButton"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- CONTENU AVEC ONGLETS -->
        <TabControl Grid.Row="1" Style="{DynamicResource ToolBoxTabControl}">
            
            <!-- ONGLET CHAMPS - FOCUS SUR LES COMBOBOX -->
            <TabItem Header="📝 Champs de Saisie" Style="{DynamicResource ToolBoxTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        
                        <TextBlock Text="Test des Champs avec ComboBox Corrigées" 
                                   Style="{DynamicResource ToolBoxSubHeaderText}"/>
                        
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <StackPanel>
                                <TextBlock Text="📝 Comparaison des hauteurs et test des fonctionnalités" 
                                           Style="{DynamicResource ToolBoxSecondaryText}"
                                           Margin="0,0,0,20"/>
                                
                                <!-- SECTION 1: COMPARAISON HAUTEURS -->
                                <TextBlock Text="1. Comparaison des Hauteurs (doivent être identiques) :" 
                                           Style="{DynamicResource ToolBoxBodyText}" 
                                           FontWeight="Medium"
                                           Margin="0,0,0,8"/>
                                
                                <Grid Margin="0,0,0,24">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Label Grid.Row="0" Grid.Column="0" Content="TextBox Référence :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="Hauteur de référence - 36px" Style="{DynamicResource ToolBoxTextBox}" Margin="0,0,0,8"/>
                                    
                                    <Label Grid.Row="1" Grid.Column="0" Content="ComboBox Standard :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                    <ComboBox Grid.Row="1" Grid.Column="1" Style="{DynamicResource ToolBoxComboBox}" SelectedIndex="0" Margin="0,0,0,8">
                                        <ComboBoxItem Content="Option 1 - Même hauteur ?"/>
                                        <ComboBoxItem Content="Option 2 - Test hauteur"/>
                                        <ComboBoxItem Content="Option 3 - Validation"/>
                                    </ComboBox>
                                    
                                    <Label Grid.Row="2" Grid.Column="0" Content="ComboBox Éditable :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                    <ComboBox Grid.Row="2" Grid.Column="1" 
                                              Style="{DynamicResource ToolBoxEditableComboBox}" 
                                              Text="Tapez 'a' pour filtrer..."
                                              Margin="0,0,0,8">
                                        <ComboBoxItem Content="Apple"/>
                                        <ComboBoxItem Content="Apricot"/>
                                        <ComboBoxItem Content="Avocado"/>
                                        <ComboBoxItem Content="Banana"/>
                                        <ComboBoxItem Content="Cherry"/>
                                        <ComboBoxItem Content="Date"/>
                                    </ComboBox>
                                    
                                    <Label Grid.Row="3" Grid.Column="0" Content="ComboBox PowerShell :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                    <ComboBox Grid.Row="3" Grid.Column="1" 
                                              Style="{DynamicResource ToolBoxComboBox}" 
                                              x:Name="PowerShellComboBox"/>
                                </Grid>
                                
                                <!-- SECTION 2: AUTRES CHAMPS -->
                                <TextBlock Text="2. Autres Champs de Saisie :" 
                                           Style="{DynamicResource ToolBoxBodyText}" 
                                           FontWeight="Medium"
                                           Margin="0,0,0,8"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Label Grid.Row="0" Grid.Column="0" Content="TextBox Focus Test :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" 
                                             Text="Cliquez ici - pas de décalage !" 
                                             Style="{DynamicResource ToolBoxTextBox}" 
                                             x:Name="FocusTextBox"
                                             Margin="0,0,0,8"/>
                                    
                                    <Label Grid.Row="1" Grid.Column="0" Content="PasswordBox :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                    <PasswordBox Grid.Row="1" Grid.Column="1" 
                                                Password="test123" 
                                                Style="{DynamicResource ToolBoxPasswordBox}" 
                                                Margin="0,0,0,8"/>

                                    <!-- Le champ désactivé utilisera le style TextBox normal, le trigger fonctionnera -->
                                    <Label Grid.Row="2" Grid.Column="0" Content="Champ Désactivé :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" 
                                            Text="Champ désactivé" 
                                            Style="{DynamicResource ToolBoxTextBox}" 
                                            IsEnabled="False"
                                            Margin="0,0,0,8"/>

                                    <!-- Mettez à jour le style de la Zone Multiligne -->
                                    <Label Grid.Row="3" Grid.Column="0" Content="Zone Multiligne :" Style="{DynamicResource ToolBoxFormLabel}"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" 
                                            Text="Zone de texte multiligne
                                            Appuyez sur Entrée
                                            pour ajouter des lignes"
                                            Style="{DynamicResource ToolBoxMultilineTextBox}" 
                                            Height="80"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- SECTION TESTS -->
                        <TextBlock Text="🧪 Tests de Fonctionnalités" 
                                   Style="{DynamicResource ToolBoxSubHeaderText}"
                                   Margin="0,24,0,0"/>
                        
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <StackPanel>
                                <TextBlock Text="Instructions de test :" 
                                           Style="{DynamicResource ToolBoxBodyText}" 
                                           FontWeight="Medium"
                                           Margin="0,0,0,8"/>
                                <StackPanel Margin="16,0,0,0">
                                    <TextBlock Text="✅ Vérifiez que toutes les ComboBox ont la même hauteur que la TextBox de référence" 
                                               Style="{DynamicResource ToolBoxBodyText}" Margin="0,4"/>
                                    <TextBlock Text="✅ Testez le clic sur chaque ComboBox → dropdown doit s'ouvrir" 
                                               Style="{DynamicResource ToolBoxBodyText}" Margin="0,4"/>
                                    <TextBlock Text="✅ ComboBox Éditable : tapez 'a' pour voir le filtrage" 
                                               Style="{DynamicResource ToolBoxBodyText}" Margin="0,4"/>
                                    <TextBlock Text="✅ ComboBox PowerShell : doit être pré-remplie avec des services Windows" 
                                               Style="{DynamicResource ToolBoxBodyText}" Margin="0,4"/>
                                    <TextBlock Text="✅ TextBox Focus : clic ne doit pas créer de décalage d'interface" 
                                               Style="{DynamicResource ToolBoxBodyText}" Margin="0,4"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- ONGLET BOUTONS -->
            <TabItem Header="🔘 Boutons" Style="{DynamicResource ToolBoxTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        
                        <TextBlock Text="Test des Boutons avec Hover Distinct" 
                                   Style="{DynamicResource ToolBoxSubHeaderText}"/>
                        
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <StackPanel>
                                <TextBlock Text="🔘 Chaque bouton a sa couleur hover spécifique" 
                                           Style="{DynamicResource ToolBoxSecondaryText}"
                                           Margin="0,0,0,16"/>
                                
                                <WrapPanel>
                                    <Button Content="Primary (bleu foncé)" Style="{DynamicResource ToolBoxPrimaryButton}" Margin="0,0,12,8"/>
                                    <Button Content="Secondary (gris)" Style="{DynamicResource ToolBoxSecondaryButton}" Margin="0,0,12,8"/>
                                    <Button Content="Success (vert foncé)" Style="{DynamicResource ToolBoxSuccessButton}" Margin="0,0,12,8"/>
                                    <Button Content="Warning (orange foncé)" Style="{DynamicResource ToolBoxWarningButton}" Margin="0,0,12,8"/>
                                    <Button Content="Danger (rouge foncé)" Style="{DynamicResource ToolBoxDangerButton}" Margin="0,0,12,8"/>
                                    <Button Content="Outline (fond gris)" Style="{DynamicResource ToolBoxOutlineButton}" Margin="0,0,12,8"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- ONGLET COULEURS -->
            <TabItem Header="🎨 Couleurs" Style="{DynamicResource ToolBoxTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        
                        <TextBlock Text="Palette de Couleurs ToolBox" 
                                   Style="{DynamicResource ToolBoxSubHeaderText}"/>
                        
                        <Border Style="{DynamicResource ToolBoxCard}">
                            <WrapPanel>
                                <Border Background="{DynamicResource ToolBoxPrimaryBrush}" Width="120" Height="80" Margin="8" CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="Primary" HorizontalAlignment="Center" Foreground="White" FontWeight="Medium"/>
                                        <TextBlock Text="#0EA5E9" HorizontalAlignment="Center" Foreground="White" FontSize="10"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="{DynamicResource ToolBoxSuccessBrush}" Width="120" Height="80" Margin="8" CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="Success" HorizontalAlignment="Center" Foreground="White" FontWeight="Medium"/>
                                        <TextBlock Text="#059669" HorizontalAlignment="Center" Foreground="White" FontSize="10"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="{DynamicResource ToolBoxWarningBrush}" Width="120" Height="80" Margin="8" CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="Warning" HorizontalAlignment="Center" Foreground="White" FontWeight="Medium"/>
                                        <TextBlock Text="#D97706" HorizontalAlignment="Center" Foreground="White" FontSize="10"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="{DynamicResource ToolBoxDangerBrush}" Width="120" Height="80" Margin="8" CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="Danger" HorizontalAlignment="Center" Foreground="White" FontWeight="Medium"/>
                                        <TextBlock Text="#DC2626" HorizontalAlignment="Center" Foreground="White" FontSize="10"/>
                                    </StackPanel>
                                </Border>
                            </WrapPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
        </TabControl>
        
        <!-- FOOTER -->
        <Border Grid.Row="2" Style="{DynamicResource ToolBoxCardFlat}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="🧪 Version Test ComboBox - Validation des hauteurs et fonctionnalités"
                           Style="{DynamicResource ToolBoxBodyText}"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" 
                        Content="Fermer" 
                        Style="{DynamicResource ToolBoxPrimaryButton}"
                        x:Name="CloseButton"/>
            </Grid>
        </Border>
    </Grid>
</Window>