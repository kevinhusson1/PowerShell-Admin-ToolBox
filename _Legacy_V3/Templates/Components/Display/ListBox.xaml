<!-- Templates/Components/Display/ListBox.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style générique pour un item dans une ListBox standard -->
    <Style TargetType="ListBoxItem" x:Key="StandardListBoxItemStyle">
        <Setter Property="Padding" Value="10,12"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="Background" Value="{DynamicResource WhiteBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Style.Triggers>
            <!-- L'item est sélectionné -->
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource SelectionBorderBrush}"/>
            </Trigger>
            <!-- La souris survole l'item -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource SelectionHoverBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource SelectionBorderBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Style générique pour un conteneur ListBox standard -->
    <Style TargetType="ListBox" x:Key="StandardListBoxStyle">
        <Setter Property="ItemContainerStyle" Value="{DynamicResource StandardListBoxItemStyle}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>