<!-- Templates/Components/Buttons/SecondaryButton.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Button" x:Key="SecondaryButtonStyle">
        <!-- Propriétés de base utilisant les nouvelles Brush sémantiques -->
        <Setter Property="Background" Value="{DynamicResource WhiteBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>   
        <Setter Property="BorderBrush" Value="{DynamicResource BorderLightBrush}"/>      
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Height" Value="38"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <!-- Trigger de survol conditionnel -->
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"/>
                    <Condition Property="IsEnabled" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Background" Value="{DynamicResource BackgroundHoverBrush}"/> 
                <Setter Property="BorderBrush" Value="{DynamicResource BorderMediumBrush}"/>      
            </MultiTrigger>

            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource Gray200Brush}"/> 
            </Trigger>

            <!-- Trigger pour l'état "désactivé", mis à jour -->
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{DynamicResource BackgroundDisabledBrush}"/>      
                <Setter Property="BorderBrush" Value="{DynamicResource BorderLightBrush}"/>      
                <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>