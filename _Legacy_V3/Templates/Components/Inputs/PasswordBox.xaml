<!-- Templates/Components/Inputs/PasswordBox.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="PasswordBox" x:Key="StandardPasswordBoxStyle">
        <Setter Property="Background" Value="{DynamicResource BackgroundControlBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <!-- Le Padding est maintenant géré par le Template, cette ligne est pour référence -->
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- Colonne pour l'icône -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Colonne pour la zone de saisie -->
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Icône -->
                            <TextBlock Grid.Column="0" Text="{TemplateBinding Tag}" FontFamily="Segoe UI Symbol" FontSize="16" 
                                       VerticalAlignment="Center" Margin="10,0,0,0" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                            
                            <!-- Zone de saisie du mot de passe -->
                            <!-- PART_ContentHost est le nom requis par WPF pour le conteneur de contenu -->
                            <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Margin="0,0,0,0"/> <!-- Marge droite pour ne pas coller au bord -->
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource BorderMediumBrush}"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource FocusBrush}"/>
                        </Trigger>
                        <!-- AJOUT : Trigger pour l'état de Succès -->
                        <Trigger Property="Tag" Value="Success">
                            <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource SuccessBrush}"/>
                        </Trigger>
                        
                        <!-- Trigger pour l'état d'Erreur -->
                        <Trigger Property="Tag" Value="Error">
                            <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource DangerBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>