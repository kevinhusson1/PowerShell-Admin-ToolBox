<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        TextOptions.TextFormattingMode="Display"
        Title="##loc:app.title##"
        WindowStartupLocation="CenterScreen">

    <!-- AmÃ©lioration : Le fond principal est maintenant un gris trÃ¨s clair -->
    <Grid Background="{DynamicResource BackgroundControlBrush}" Cursor="Arrow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- En-tÃªte -->
            <RowDefinition Height="*"/>    <!-- Contenu principal -->
            <RowDefinition Height="Auto"/> <!-- Pied de page global -->
        </Grid.RowDefinitions>

        <!-- 1. En-tÃªte -->
        <Grid Grid.Row="0" Margin="25,20,25,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Grid Width="48" Height="48" VerticalAlignment="Center" Margin="0,0,15,0">
                    <Ellipse Fill="{DynamicResource HeaderIconBackgroundBrush}"/>
                    <Rectangle Fill="{DynamicResource WhiteBrush}" Margin="12">
                        <Rectangle.OpacityMask>
                            <ImageBrush x:Name="HeaderIconMask" Stretch="Uniform"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Style="{DynamicResource H1Style}" Text="##loc:app.title##"/>
                    <TextBlock Style="{DynamicResource H2Style}" Margin="0" Text="##loc:app.subtitle##"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                
                <!-- Nouveau bouton Texte (Se connecter / Se dÃ©connecter) -->
                <Button x:Name="AuthTextButton" 
                        Content="##loc:launcher.auth_login##"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        FontSize="13"
                        FontWeight="SemiBold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Macaron existant (ProfileButton) -->
                <Button x:Name="AuthStatusButton" 
                        Style="{DynamicResource ProfileButtonStyle}" 
                        VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- 2. Contenu principal : le TabControl -->
        <TabControl Grid.Row="1" Style="{DynamicResource NavTabControlStyle}">
            
            <!-- ONGLET 1 : Scripts -->
            <TabItem IsSelected="True" x:Name="ScriptsTabItem">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“œ" Margin="0,0,5,0"/>
                        <TextBlock Text="##loc:tabs.scripts##"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Zone de contenu dynamique : Message ou Liste -->
                    <Grid Grid.Row="0">
                        <!-- Message d'invitation Ã  la connexion (Visible par dÃ©faut) -->
                        <StackPanel x:Name="ConnectPromptPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ”’" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="{DynamicResource Gray300Brush}"/>
                            <TextBlock Text="##loc:launcher.connect_prompt_title##" Style="{DynamicResource H1Style}" HorizontalAlignment="Center" TextAlignment="Center"/>
                            <TextBlock Text="##loc:launcher.connect_prompt_desc##" Style="{DynamicResource H2Style}" HorizontalAlignment="Center" TextAlignment="Center" MaxWidth="400" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Liste des scripts (MasquÃ©e par dÃ©faut) -->
                        <ListBox x:Name="ScriptsListBox" Margin="15,0,15,0" Style="{DynamicResource ScriptGridListBoxStyle}" Visibility="Collapsed"/>
                    </Grid>

                    <Border x:Name="DetailsPanelBorder" Visibility="Collapsed" 
                        Grid.Row="1" Margin="25" Padding="20" MinHeight="100" 
                        Background="{DynamicResource WhiteBrush}" CornerRadius="8"
                        BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
                        <Grid>
                            <TextBlock x:Name="DefaultDetailText" Text="##loc:launcher.details_default##" Style="{DynamicResource H2Style}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Grid x:Name="ScriptDetailPanel" Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" VerticalAlignment="Center">
                                    <TextBlock x:Name="DescriptionTextBlock" TextWrapping="Wrap" Style="{DynamicResource H4Style}" Margin="0"/>
                                    <TextBlock x:Name="VersionTextBlock" Style="{DynamicResource DescriptionTextStyle}" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                    <Button x:Name="BringToFrontButton" Content="##loc:launcher.bring_to_front_button##" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                                    <Button x:Name="ExecuteButton" Content="##loc:launcher.execute_button##" Style="{DynamicResource PrimaryButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                            <Grid x:Name="ScriptLoadingPanel" Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Name="LoadingScriptName" Style="{DynamicResource H3Style}" Margin="0,0,0,15" Text=""/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="â³" FontFamily="Segoe UI Symbol" FontSize="16" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="1" x:Name="LoadingStatusText" Text="##loc:ui.progressUpdate##" Style="{DynamicResource H4Style}" Margin="0"/>
                                    </Grid>
                                    <Border CornerRadius="4" Height="8" Margin="0,10,0,0" Background="{DynamicResource Gray200Brush}" ClipToBounds="True">
                                        <ProgressBar x:Name="LoadingProgressBar" BorderThickness="0" Foreground="{DynamicResource SuccessBrush}" Background="Transparent"/>
                                    </Border>
                                    <TextBlock x:Name="LoadingProgressText" Text="0%" HorizontalAlignment="Right" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- ONGLET 2 : GOUVERNANCE (DESIGN V2 HARMONISÃ‰) -->
            <TabItem x:Name="GovernanceTabItem" Visibility="Collapsed">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ›¡ï¸" FontFamily="Segoe UI Symbol" Margin="0,0,5,0"/>
                        <TextBlock Text="##loc:governance.tab_title##"/>
                    </StackPanel>
                </TabItem.Header>
                
                <Grid Margin="25" Background="{DynamicResource WhiteBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>   <!-- Demandes -->
                        <ColumnDefinition Width="25"/>  <!-- GouttiÃ¨re -->
                        <ColumnDefinition Width="*"/>   <!-- Permissions -->
                        <ColumnDefinition Width="25"/>  <!-- GouttiÃ¨re -->
                        <ColumnDefinition Width="*"/>   <!-- Membres -->
                    </Grid.ColumnDefinitions>

                    <!-- ======================================================= -->
                    <!-- COLONNE 1 : DEMANDES (BLEU) -->
                    <!-- ======================================================= -->
                    <Border Grid.Column="0" Background="{DynamicResource WhiteBrush}" CornerRadius="12" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- En-tÃªte -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="{DynamicResource InfoBackgroundBrush}">
                                    <TextBlock Text="ðŸ“¬" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                                </Border>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="##loc:governance.requests_title##" Style="{DynamicResource H4Style}" FontSize="15"/>
                                    <TextBlock Text="Approbation des scopes" Style="{DynamicResource DescriptionTextStyle}" FontSize="11"/>
                                </StackPanel>
                            </Grid>

                            <!-- Liste des demandes -->
                            <ListBox Grid.Row="1" x:Name="PermissionRequestsListBox" 
                                     BorderThickness="0" Background="Transparent" 
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                     Padding="0">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Margin" Value="0,0,0,10"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Background="{DynamicResource BackgroundLightBrush}" Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Info Demande -->
                                                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                        <TextBlock Text="ðŸ‘¤" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0" Opacity="0.6"/>
                                                        <TextBlock Text="{Binding RequesterUPN}" FontWeight="SemiBold" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                    
                                                    <Border Background="{DynamicResource InfoBackgroundBrush}" CornerRadius="4" HorizontalAlignment="Left" Padding="6,2" Margin="0,0,0,4">
                                                        <TextBlock Text="{Binding RequestedScope}" Foreground="{DynamicResource InfoHoverBrush}" FontWeight="Bold" FontSize="11" FontFamily="Consolas"/>
                                                    </Border>
                                                    
                                                    <TextBlock Text="{Binding Reason}" FontSize="11" FontStyle="Italic" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap" MaxHeight="40" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <!-- Actions -->
                                                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                                    <!-- Bouton VALIDER -->
                                                    <Button Content="âœ…" Width="32" Height="32" Style="{DynamicResource GreenButtonStyle}" Margin="0,0,0,5" CornerRadius="16"
                                                            ToolTip="##loc:governance.requests_approve_tooltip##"
                                                            Tag="{Binding}"/> 
                                                    
                                                    <!-- Bouton REFUSER -->
                                                    <Button Content="âŒ" Width="32" Height="32" Style="{DynamicResource RedButtonStyle}" CornerRadius="16"
                                                            ToolTip="##loc:governance.requests_reject_tooltip##"
                                                            CommandParameter="{Binding RequestID}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <!-- Ã‰tat Vide -->
                            <StackPanel Grid.Row="1" x:Name="NoRequestsText" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5">
                                <TextBlock Text="ðŸ“­" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="##loc:governance.requests_none##" HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- ======================================================= -->
                    <!-- COLONNE 2 : PERMISSIONS (ORANGE) -->
                    <!-- ======================================================= -->
                    <Border Grid.Column="2" Background="{DynamicResource WhiteBrush}" CornerRadius="12" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- En-tÃªte -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="{DynamicResource WarningBackgroundBrush}">
                                    <TextBlock Text="ðŸ”‘" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                                </Border>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="##loc:governance.permissions_title##" Style="{DynamicResource H4Style}" FontSize="15"/>
                                    <TextBlock Text="##loc:governance.permissions_desc##" Style="{DynamicResource DescriptionTextStyle}" FontSize="11"/>
                                </StackPanel>
                            </Grid>

                            <!-- Liste des scopes -->
                            <ListBox Grid.Row="1" x:Name="CurrentScopesListBox" BorderThickness="0" Background="Transparent" Padding="0">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Margin" Value="0,0,0,5"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <!-- Note : Les items sont gÃ©nÃ©rÃ©s dynamiquement en C# dans Update-GovernanceTab. 
                                     IdÃ©alement on ferait un DataTemplate ici, mais pour la compatibilitÃ© avec le code existant 
                                     on garde la structure, mais on stylisera les items via le code ou un style global -->
                            </ListBox>

                            <!-- Actions -->
                            <StackPanel Grid.Row="2" Margin="0,15,0,0">
                                <Button x:Name="SyncAzureButton" Content="##loc:governance.btn_sync##" Style="{DynamicResource PrimaryButtonStyle}" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition/></Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" x:Name="AddPermissionButton" Content="##loc:governance.btn_add_manual##" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,5,0" FontSize="11"/>
                                    <Button Grid.Column="1" x:Name="GrantConsentButton" Content="##loc:governance.btn_validate_consent##" Style="{DynamicResource SecondaryButtonStyle}" Margin="5,0,0,0" FontSize="11"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- ======================================================= -->
                    <!-- COLONNE 3 : MEMBRES (VIOLET) -->
                    <!-- ======================================================= -->
                    <Border Grid.Column="4" Background="{DynamicResource WhiteBrush}" CornerRadius="12" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- En-tÃªte -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="{DynamicResource SecondaryBackgroundBrush}">
                                    <TextBlock Text="ðŸ›¡ï¸" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                                </Border>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="##loc:governance.members_title##" Style="{DynamicResource H4Style}" FontSize="15"/>
                                    <TextBlock Text="Audit des accÃ¨s" Style="{DynamicResource DescriptionTextStyle}" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- Groupe Admin -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,15">
                                        <StackPanel>
                                            <TextBlock Text="##loc:governance.group_admins##" FontWeight="Bold" Foreground="{DynamicResource SecondaryBrush}" Margin="0,0,0,5"/>
                                            <ListBox x:Name="AdminMembersListBox" MaxHeight="200" BorderThickness="0" Background="Transparent" Padding="0">
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Padding" Value="2"/>
                                                        <Setter Property="FontSize" Value="12"/>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                            </ListBox>
                                        </StackPanel>
                                    </Border>

                                    <!-- Groupe User -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}" CornerRadius="8" Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="##loc:governance.group_users##" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                            <ListBox x:Name="UserMembersListBox" MaxHeight="200" BorderThickness="0" Background="Transparent" Padding="0">
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Padding" Value="2"/>
                                                        <Setter Property="FontSize" Value="12"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                            </ListBox>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                </Grid>
            </TabItem>

            <!-- ONGLET 3 : GESTION (DESIGN FINAL v4) -->
            <TabItem x:Name="ManagementTabItem" Visibility="Collapsed">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ› ï¸" FontFamily="Segoe UI Symbol" Margin="0,0,5,0"/>
                        <TextBlock Text="##loc:management.tab_title##"/>
                    </StackPanel>
                </TabItem.Header>
                
                <Grid Margin="25" Background="{DynamicResource WhiteBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380"/> 
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- COLONNE GAUCHE -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 1. BIBLIOTHÃˆQUE -->
                        <Border Grid.Row="0" Background="{DynamicResource WhiteBrush}" CornerRadius="12" Padding="20" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
                            <StackPanel>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="{DynamicResource SecondaryBackgroundBrush}">
                                        <!-- Nouvelle IcÃ´ne : Classeur -->
                                        <TextBlock Text="ðŸ—ƒï¸" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="##loc:management.library_title##" Style="{DynamicResource H4Style}" FontSize="15"/>
                                        <TextBlock Text="##loc:management.library_desc##" Style="{DynamicResource DescriptionTextStyle}" FontSize="11"/>
                                    </StackPanel>

                                    <Border Grid.Column="2" Background="{DynamicResource Gray100Brush}" CornerRadius="6" Padding="8,2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Items.Count, ElementName=LibraryGroupsComboBox, FallbackValue='0'}" FontWeight="Bold" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </Border>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" x:Name="LibraryNewGroupTextBox" Style="{DynamicResource StandardTextBoxStyle}" 
                                             Tag="##loc:management.library_placeholder_add##" Height="40" BorderThickness="1" Background="{DynamicResource BackgroundControlBrush}"/>
                                    
                                    <Button Grid.Column="1" x:Name="LibraryAddGroupButton" Content="âž•" 
                                            Style="{DynamicResource PrimaryButtonStyle}" Width="40" Height="40" Margin="10,0,0,0" Padding="0"
                                            ToolTip="##loc:management.library_tooltip_add##"/>
                                </Grid>
                                <TextBlock Text="â„¹ï¸ Le groupe sera validÃ© dans Azure AD avant ajout" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="5,5,0,0"/>

                                <Separator Margin="0,15" Background="{DynamicResource BorderLightBrush}"/>

                                <Grid>
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                    <!-- Correction : DisplayMemberPath pour Ã©viter @{GroupName=...} -->
                                    <ComboBox Grid.Column="0" x:Name="LibraryGroupsComboBox" Style="{DynamicResource StandardComboBoxStyle}" 
                                              Tag="##loc:management.library_placeholder_select##" DisplayMemberPath="GroupName"/>
                                    
                                    <Button Grid.Column="1" x:Name="LibraryRemoveGroupButton" Content="ðŸ—‘ï¸" Style="{DynamicResource IconButtonStyle}" 
                                            Width="40" Height="40" Margin="10,0,0,0" Foreground="{DynamicResource DangerBrush}" Padding="0"
                                            ToolTip="##loc:management.library_tooltip_remove##"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- 2. LISTE DES SCRIPTS (Sans recherche) -->
                        <Border Grid.Row="2" Background="{DynamicResource WhiteBrush}" CornerRadius="12" Padding="0" ClipToBounds="True" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="20,20,20,10">
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                    <Border Width="40" Height="40" CornerRadius="10" Background="{DynamicResource InfoBackgroundBrush}">
                                        <TextBlock Text="ðŸ“„" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="##loc:management.scripts_list_title##" Style="{DynamicResource H4Style}" FontSize="15"/>
                                        <TextBlock Text="{Binding Items.Count, ElementName=ManageScriptsListBox, StringFormat='{}{0} scripts dÃ©tectÃ©s'}" Style="{DynamicResource DescriptionTextStyle}" FontSize="11"/>
                                    </StackPanel>
                                </Grid>

                                <ListBox Grid.Row="1" x:Name="ManageScriptsListBox" 
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         BorderThickness="0" Background="Transparent" Padding="10"
                                         Focusable="False">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Margin" Value="0,0,0,8"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border x:Name="ItemBorder" CornerRadius="10" Background="{DynamicResource WhiteBrush}" 
                                                                BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="15,12" Cursor="Hand">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                                                <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2"/>
                                                                <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource Gray50Brush}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                                <Ellipse Grid.Column="0" Width="10" Height="10" VerticalAlignment="Center" Margin="0,0,15,0">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding enabled}" Value="True"><Setter Property="Fill" Value="{DynamicResource SuccessBrush}"/></DataTrigger>
                                                                <DataTrigger Binding="{Binding enabled}" Value="False"><Setter Property="Fill" Value="{DynamicResource TextDisabledBrush}"/></DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding name}" FontWeight="SemiBold" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding ScriptPath}" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
