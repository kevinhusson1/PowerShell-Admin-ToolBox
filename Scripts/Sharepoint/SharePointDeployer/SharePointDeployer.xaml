<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="##loc:default_ui.window_title##" Height="880" Width="1200" WindowStartupLocation="CenterScreen" Background="{DynamicResource WhiteBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: En-tÃªte -->
            <RowDefinition Height="*"/>
            <!-- 1: Contenu -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Footer (optionnel) -->
        </Grid.RowDefinitions>

        <!-- =============================================================== -->
        <!-- 1. EN-TÃŠTE STANDARD -->
        <!-- =============================================================== -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- IcÃ´ne -->
                    <ColumnDefinition Width="*"/>
                    <!-- Textes -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Auth -->
                </Grid.ColumnDefinitions>

                <!-- IcÃ´ne -->
                <Border Grid.Column="0" Width="56" Height="56" CornerRadius="20" BorderBrush="{DynamicResource WhiteBrush}" BorderThickness="2" Background="{DynamicResource PrimaryLightBrush}">
                    <Rectangle Fill="{DynamicResource WhiteBrush}" Margin="14">
                        <Rectangle.OpacityMask>
                            <ImageBrush x:Name="HeaderIconBrush" Stretch="Uniform"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Border>

                <!-- Textes -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="HeaderTitleText" Text="##loc:default_ui.window_title##" Foreground="{DynamicResource WhiteBrush}" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock x:Name="HeaderSubtitleText" Text="##loc:sp_deploy.placeholder_select##" Foreground="{DynamicResource WhiteBrush}" Opacity="0.8" FontSize="14"/>
                </StackPanel>

                <!-- Auth -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ScriptAuthTextButton" Content="##loc:sp_deploy.status_disconnected##" Margin="0,0,10,0" VerticalAlignment="Center" Cursor="Hand" FontSize="13" FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="ScriptAuthStatusButton" Style="{DynamicResource ProfileButtonStyle}" Width="32" Height="32" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- =============================================================== -->
        <!-- 2. CONTENU -->
        <!-- =============================================================== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Main -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar (Liste Configs) -->
            <Border Grid.Column="0" Background="{DynamicResource WhiteBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="##loc:sp_deploy.configs_title##" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" Margin="20,20,20,10"/>

                    <ListBox x:Name="ConfigListBox" Grid.Row="1" Margin="10,0,10,10" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" CornerRadius="8" Background="{DynamicResource WhiteBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                                    <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                                    <Setter TargetName="Bd" Property="Background" Value="#F0F9FF"/>
                                                    <!-- Light Blue -->
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource BorderMediumBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Width="36" Height="36" CornerRadius="18" Background="{DynamicResource PrimaryLightBrush}" Margin="0,0,12,0">
                                        <TextBlock Text="ðŸš€" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ConfigName}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding LibraryName}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Main Panel -->
            <Grid Grid.Column="1" Background="{DynamicResource WhiteBrush}">
                <!-- Placeholder (Aucune sÃ©lection) -->
                <StackPanel x:Name="PlaceholderPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
                    <TextBlock Text="â¬…ï¸" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                    <TextBlock x:Name="PlaceholderText" Text="##loc:sp_deploy.placeholder_msg##" FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,20,0,0"/>
                </StackPanel>

                <!-- Detail Panel -->
                <Grid x:Name="DetailGrid" Visibility="Collapsed" Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Titre -->
                        <RowDefinition Height="Auto"/>
                        <!-- Info Badges -->
                        <RowDefinition Height="Auto"/>
                        <!-- Alert Warning -->
                        <RowDefinition Height="*"/>
                        <!-- Formulaire -->
                        <RowDefinition Height="Auto"/>
                        <!-- Boutons -->
                        <RowDefinition Height="Auto"/>
                        <!-- Logs -->
                    </Grid.RowDefinitions>

                    <!-- Titre Config -->
                    <TextBlock x:Name="ConfigTitleText" Text="TITRE CONFIG" FontSize="20" Grid.Row="0" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                    <!-- Badges Info -->
                    <!-- Infos Header -->
                    <Grid Grid.Row="1" Margin="0,0,0,25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 0: Site URL (Full Width) -->
                        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                            <TextBlock Text="URL CIBLE" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                            <Border Background="{DynamicResource PrimaryLightBrush}" CornerRadius="4" Padding="10">
                                <TextBlock x:Name="BadgeSiteText" Text="https://..." Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                            </Border>
                        </StackPanel>

                        <!-- Row 1, Col 0: Library -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="BIBLIOTHÃˆQUE" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <Border Background="{DynamicResource IndigoLightBrush}" CornerRadius="4" Padding="8,4">
                                    <TextBlock x:Name="BadgeLibText" Text="..." Foreground="{DynamicResource IndigoBrush}" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- Row 1, Col 1: Template -->
                        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="MODÃˆLE APPLIQUÃ‰" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4" HorizontalAlignment="Right"/>
                            <Border Background="{DynamicResource OrangeLightBrush}" CornerRadius="4" Padding="8,4">
                                <TextBlock x:Name="BadgeTemplateText" Text="..." Foreground="{DynamicResource OrangeBrush}" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Warning Permissions -->
                    <Border x:Name="PermissionWarningBorder" Grid.Row="2" Background="#FFF9C4" BorderBrush="#FFF59D" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" Margin="0,0,10,0"/>
                            <TextBlock Text="##loc:sp_deploy.warning_overwrite##" Foreground="#F57F17" FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- Conteneur Formulaire Dynamique -->
                    <StackPanel x:Name="DynamicFormPanel" Grid.Row="3">
                        <!-- PeuplÃ© par PowerShell -->
                    </StackPanel>

                    <!-- Bouton Action -->
                    <!-- Boutons Action -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,20">
                        <Button x:Name="OpenTargetButton" Content="Ouvrir destination" Width="160" Height="40" Margin="0,0,10,0" IsEnabled="False" Style="{DynamicResource SecondaryButtonStyle}"/>
                        <Button x:Name="DeployButton" Content="##loc:sp_deploy.btn_deploy##" Width="200" Height="40" Style="{DynamicResource PrimaryButtonStyle}"/>
                    </StackPanel>

                    <!-- Logs -->
                    <StackPanel Grid.Row="5">
                        <TextBlock Text="##loc:sp_deploy.log_title##" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <Border BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" CornerRadius="4" Height="150">
                            <RichTextBox x:Name="LogRichTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" BorderThickness="0" Padding="10">
                                <FlowDocument>
                                    <Paragraph>
                                        <Run Text="PrÃªt." Foreground="#888"/>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <!-- Overlay de Connexion Requis (au centre, remplace le contenu) -->
        <Grid x:Name="AuthOverlay" Grid.Row="1" Background="{DynamicResource WhiteBrush}" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”’" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="##loc:sp_deploy.auth_required_title##" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="##loc:sp_deploy.auth_required_message##" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap" MaxWidth="300" TextAlignment="Center"/>
                <Button x:Name="OverlayConnectButton" Content="##loc:sp_deploy.auth_connect_button##" Style="{DynamicResource PrimaryButtonStyle}" Width="200" Height="40" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
