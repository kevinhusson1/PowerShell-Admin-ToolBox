<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="##loc:sp_builder.window_title##"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WhiteBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- En-tÃªte -->
            <RowDefinition Height="Auto"/> <!-- Zone de DEBUG Auth -->
            <RowDefinition Height="*"/>    <!-- Contenu -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- 1. EN-TÃŠTE STANDARD (Avec Module IdentitÃ©) -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- IcÃ´ne -->
                <Border Grid.Column="0" Width="56" Height="56" CornerRadius="20" 
                        BorderBrush="{DynamicResource WhiteBrush}" BorderThickness="2"
                        Background="{DynamicResource PrimaryLightBrush}">
                    <Rectangle Fill="{DynamicResource WhiteBrush}" Margin="14">
                        <Rectangle.OpacityMask>
                            <ImageBrush x:Name="HeaderIconBrush" Stretch="Uniform"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Border>
                
                <!-- Titres -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="##loc:scripts.sharepoint_builder.name##" Foreground="{DynamicResource WhiteBrush}" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock Text="##loc:scripts.sharepoint_builder.description##" Foreground="{DynamicResource WhiteBrush}" Opacity="0.8" FontSize="14"/>
                </StackPanel>

                <!-- Module IdentitÃ© (Macaron) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ScriptAuthTextButton" Content="Non connectÃ©"
                            Margin="0,0,10,0" VerticalAlignment="Center" Cursor="Arrow"
                            FontSize="13" FontWeight="SemiBold" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource WhiteBrush}"/>
                    <Button x:Name="ScriptAuthStatusButton" Style="{DynamicResource ProfileButtonStyle}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 2. ZONE DE DEBUG AUTHENTIFICATION (Temporaire) -->
        <Border Grid.Row="1" Background="{DynamicResource BackgroundLightBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,0,1" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <!-- Status Graph -->
                <Border CornerRadius="4" Background="{DynamicResource WhiteBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="10,5" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Azure AD (Graph) : " FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="DebugGraphStatus" Text="..." FontWeight="Bold" Foreground="{DynamicResource DangerBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Status PnP -->
                <Border CornerRadius="4" Background="{DynamicResource WhiteBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="SharePoint (PnP) : " FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="DebugPnPStatus" Text="..." FontWeight="Bold" Foreground="{DynamicResource DangerBrush}"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>

        <!-- 3. CONTENU PRINCIPAL (Vide pour l'instant) -->
        <TabControl Grid.Row="2" Style="{DynamicResource NavTabControlStyle}" Margin="0,10,0,0">
            
            <!-- ONGLET 1 : DÃ‰PLOIEMENT (Runner) -->
            <TabItem Header="ðŸš€ DÃ©ploiement">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/> <!-- Panneau Gauche (Config) -->
                        <ColumnDefinition Width="20"/>  <!-- Espace -->
                        <ColumnDefinition Width="*"/>   <!-- Panneau Droit (Visualisation) -->
                    </Grid.ColumnDefinitions>

                    <!-- COLONNE GAUCHE : Configuration -->
                    <StackPanel Grid.Column="0">
                        
                        <!-- A. CIBLE -->
                        <Border Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Cible du dÃ©ploiement" Style="{DynamicResource H3Style}"/>
                                
                                <TextBlock Text="Site SharePoint" Style="{DynamicResource H4Style}" Margin="0,5,0,0"/>
                                <ComboBox x:Name="SiteComboBox" Style="{DynamicResource StandardComboBoxStyle}" IsEditable="True"/>
                                
                                <TextBlock Text="BibliothÃ¨que" Style="{DynamicResource H4Style}" Margin="0,10,0,0"/>
                                <ComboBox x:Name="LibraryComboBox" Style="{DynamicResource StandardComboBoxStyle}"/>
                            </StackPanel>
                        </Border>

                        <!-- B. MODÃˆLE (TEMPLATE) -->
                        <Border Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="ModÃ¨le d'architecture" Style="{DynamicResource H3Style}"/>
                                <ComboBox x:Name="TemplateComboBox" Style="{DynamicResource StandardComboBoxStyle}" Margin="0,5,0,0"/>
                                <TextBlock x:Name="TemplateDescText" Text="SÃ©lectionnez un modÃ¨le pour voir la description." Style="{DynamicResource DescriptionTextStyle}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- C. CONFIGURATION (Formulaire Dynamique) -->
                        <Border Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Configuration du dossier" Style="{DynamicResource H3Style}"/>
                                
                                <!-- Placeholder pour le formulaire gÃ©nÃ©rÃ© -->
                                <StackPanel x:Name="DynamicFormPanel" Margin="0,10,0,0"/>
                                
                                <Separator Background="{DynamicResource BorderLightBrush}" Margin="0,15"/>
                                
                                <TextBlock Text="AperÃ§u du nom :" Style="{DynamicResource H4Style}"/>
                                <Border Background="{DynamicResource BackgroundMediumBrush}" CornerRadius="4" Padding="10" Margin="0,5,0,0">
                                    <TextBlock x:Name="FolderNamePreviewText" Text="..." FontFamily="Consolas" FontWeight="Bold"/>
                                </Border>
                                <Button x:Name="DeployButton" Content="ðŸš€ Lancer le dÃ©ploiement" 
                                        Style="{DynamicResource GreenButtonStyle}" Margin="0,15,0,0" Height="40"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- COLONNE DROITE : Visualisation -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="150"/>
                        </Grid.RowDefinitions>

                        <!-- ARBRE (TreeView) -->
                        <Border Grid.Row="0" Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Background="{DynamicResource BackgroundLightBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,0,1" CornerRadius="8,8,0,0" Padding="10">
                                    <TextBlock Text="Structure projetÃ©e" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </Border>

                                <TreeView x:Name="PreviewTreeView" Grid.Row="1" Style="{DynamicResource ModernTreeViewStyle}" BorderThickness="0"/>
                            </Grid>
                        </Border>

                        <!-- BARRE DE PROGRESSION -->
                        <StackPanel Grid.Row="1" Margin="0,15">
                            <Grid>
                                <TextBlock x:Name="ProgressStatusText" Text="PrÃªt." Style="{DynamicResource DescriptionTextStyle}"/>
                                <TextBlock x:Name="ProgressPercentageText" Text="0%" HorizontalAlignment="Right" Style="{DynamicResource DescriptionTextStyle}"/>
                            </Grid>
                            <ProgressBar x:Name="MainProgressBar" Height="6" Margin="0,5,0,0" Background="{DynamicResource Gray200Brush}" Foreground="{DynamicResource PrimaryBrush}" BorderThickness="0"/>
                        </StackPanel>

                        <!-- LOGS -->
                        <RichTextBox Grid.Row="2" x:Name="LogRichTextBox" Style="{DynamicResource StandardRichTextBoxStyle}"/>

                    </Grid>
                </Grid>
            </TabItem>

            <!-- ONGLET 2 : CONCEPTION (Admin) -->
            <TabItem Header="âœï¸ Conception" x:Name="DesignerTabItem" Visibility="Collapsed">
                <Grid>
                    <TextBlock Text="Interface de conception (V3.1)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

        </TabControl>

        <!-- 4. PIED DE PAGE -->
        <Border Grid.Row="3" Background="{DynamicResource WhiteBrush}" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderLightBrush}" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="v3.0.0" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>