<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="##loc:sp_builder.window_title##" TextOptions.TextFormattingMode="Display" Height="980" Width="1500" WindowStartupLocation="CenterScreen" UseLayoutRounding="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: En-tÃªte + Menu -->
            <RowDefinition Height="*"/>
            <!-- 1: Contenu -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Pied de page -->
        </Grid.RowDefinitions>

        <!-- =============================================================== -->
        <!-- 1. EN-TÃŠTE STANDARD + MENU INTÃ‰GRÃ‰ -->
        <!-- =============================================================== -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- IcÃ´ne -->
                <Border Grid.Column="0" Width="56" Height="56" CornerRadius="20" BorderBrush="{DynamicResource WhiteBrush}" BorderThickness="2" Background="{DynamicResource PrimaryLightBrush}">
                    <Rectangle Fill="{DynamicResource WhiteBrush}" Margin="14">
                        <Rectangle.OpacityMask>
                            <ImageBrush x:Name="HeaderIconBrush" Stretch="Uniform"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Border>

                <!-- Textes -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="HeaderTitleText" Text="##loc:scripts.DefaultUI.name##" Foreground="{DynamicResource WhiteBrush}" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock x:Name="HeaderSubtitleText" Text="##loc:scripts.DefaultUI.description##" Foreground="{DynamicResource WhiteBrush}" Opacity="0.8" FontSize="14"/>
                </StackPanel>

                <!-- Auth -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                    <!-- Nom / Ã‰tat (Texte) -->
                    <Button x:Name="ScriptAuthTextButton" Content="Non connectÃ©" Margin="0,0,10,0" VerticalAlignment="Center" Cursor="Arrow" FontSize="13" FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}"/>
                                <!-- Blanc sur fond bleu -->
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Macaron (Cercle) -->
                    <Button x:Name="ScriptAuthStatusButton" Style="{DynamicResource ProfileButtonStyle}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Ligne 2 : Menu TabControl -->
        <Grid Grid.Row="1" Background="{DynamicResource PrimaryBrush}">
            <TabControl x:Name="MainTabControl" Style="{DynamicResource NavTabControlStyle}">
                <!-- ONGLET DÃ‰PLOIEMENT -->
                <TabItem Header="ðŸš€ DÃ©ploiement" IsSelected="True">
                    <Grid Background="{DynamicResource WhiteBrush}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="25">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="500"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- COLONNE GAUCHE (CONFIG) -->
                                <StackPanel Grid.Column="0">

                                    <!-- CARTE 1 : CIBLE -->
                                    <Border Style="{DynamicResource CardBorderStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Style="{DynamicResource StepIconBorderStyle}" Background="{DynamicResource InfoBackgroundBrush}">
                                                    <TextBlock Text="1" Foreground="{DynamicResource InfoBrush}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <TextBlock Text="Cible du DÃ©ploiement" Style="{DynamicResource StepHeaderTextStyle}" Grid.Column="1"/>
                                            </Grid>

                                            <TextBlock Text="Site SharePoint" Style="{DynamicResource H4Style}"/>
                                            <ComboBox x:Name="SiteComboBox" Style="{DynamicResource StandardEditableComboBoxStyle}" Margin="0,5,0,15"/>

                                            <TextBlock Text="BibliothÃ¨que de Documents" Style="{DynamicResource H4Style}"/>
                                            <ComboBox x:Name="LibraryComboBox" Style="{DynamicResource StandardComboBoxStyle}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- CARTE 3 : CONFIGURATION DOSSIER -->
                                    <Border Style="{DynamicResource CardBorderStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Style="{DynamicResource StepIconBorderStyle}" Background="{DynamicResource WarningBackgroundBrush}">
                                                        <TextBlock Text="3" Foreground="{DynamicResource WarningBrush}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <TextBlock Text="CrÃ©ation de la Destination" Style="{DynamicResource StepHeaderTextStyle}"/>
                                                </StackPanel>
                                                <Border Grid.Column="2" Background="{DynamicResource BackgroundMediumBrush}" CornerRadius="4" Padding="6,2" VerticalAlignment="Center" Margin="0,0,0,15">
                                                    <TextBlock Text="Optionnel" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </Border>
                                            </Grid>

                                            <!-- Toggle + Choix ModÃ¨le Dossier -->
                                            <Grid Margin="0,0,0,20">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <CheckBox Grid.Column="0" x:Name="CreateFolderCheckBox" Style="{DynamicResource ToggleSwitchStyle}"/>
                                                <TextBlock Grid.Column="1" Text="CrÃ©er un dossier de destination" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="SemiBold"/>
                                                <ComboBox Grid.Column="2" x:Name="FolderTemplateComboBox" Style="{DynamicResource StandardComboBoxStyle}" IsEnabled="{Binding IsChecked, ElementName=CreateFolderCheckBox}"/>
                                            </Grid>

                                            <!-- Formulaire Dynamique -->
                                            <StackPanel x:Name="DynamicFormPanel" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,15"/>

                                            <!-- Preview RÃ©sultat -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="RÃ©sultat :  â†’" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,10,0"/>
                                                <Border Grid.Column="1" Background="{DynamicResource BackgroundMediumBrush}" CornerRadius="6" Padding="12,8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
                                                    <TextBlock x:Name="FolderNamePreviewText" Text="..." FontFamily="Consolas" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13"/>
                                                </Border>
                                            </Grid>
                                            <TextBlock Text="Format standard dÃ©fini par la rÃ¨gle de nommage." FontSize="10" FontStyle="Italic" Foreground="{DynamicResource TextDisabledBrush}" Margin="0,5,0,0" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- CARTE OPTIONS -->
                                    <Border Style="{DynamicResource CardBorderStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Style="{DynamicResource StepIconBorderStyle}" Background="{DynamicResource SecondaryBackgroundBrush}">
                                                    <TextBlock Text="âš™" Foreground="{DynamicResource SecondaryBrush}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                                                </Border>
                                                <TextBlock Text="Options AvancÃ©es" Style="{DynamicResource StepHeaderTextStyle}" Grid.Column="1"/>
                                            </Grid>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <CheckBox x:Name="OverwritePermissionsCheckBox" Style="{DynamicResource ToggleSwitchStyle}"/>
                                                    <TextBlock Text="Ã‰craser les permissions existantes" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button x:Name="ResetUIButton" Content="â†º RÃ©initialiser" Style="{DynamicResource SecondaryButtonStyle}" Height="32" FontSize="11" Margin="0,0,10,0"/>
                                                    <Button x:Name="ExportConfigButton" Content="â†— Exporter" Style="{DynamicResource PrimaryButtonStyle}" Height="32" FontSize="11"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- COLONNE DROITE (VISUALISATION) -->
                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <!-- Espace -->
                                        <RowDefinition Height="250"/>
                                        <!-- Logs -->
                                    </Grid.RowDefinitions>

                                    <!-- CARTE 2 : ARBORESCENCE -->
                                    <Border Grid.Row="0" Style="{DynamicResource CardBorderStyle}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header Interne -->
                                            <Border Grid.Row="0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <!-- Icone -->
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- Titre -->
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- ComboBox -->
                                                        <ColumnDefinition Width="Auto"/>
                                                        <!-- Info -->
                                                    </Grid.ColumnDefinitions>

                                                    <Border Grid.Column="0" Style="{DynamicResource StepIconBorderStyle}" Background="{DynamicResource SecondaryBackgroundBrush}">
                                                        <TextBlock Text="2" Foreground="{DynamicResource InfoBrush}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <TextBlock Grid.Column="1" Text="ModÃ¨le Ã  Appliquer" Style="{DynamicResource StepHeaderTextStyle}"/>

                                                    <ComboBox Grid.Column="2" x:Name="TemplateComboBox" Style="{DynamicResource StandardComboBoxStyle}" Height="32"/>

                                                    <TextBlock Grid.Column="3" x:Name="TemplateDescText" Text="â„¹ï¸" ToolTip="SÃ©lectionnez un modÃ¨le pour voir sa description" Margin="10,0,0,0" VerticalAlignment="Center" Cursor="Help"/>
                                                </Grid>
                                            </Border>
                                            <!-- TreeView -->
                                            <Border Grid.Row="1" Margin="15" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" CornerRadius="4" Background="{DynamicResource WhiteBrush}">
                                                <TreeView x:Name="PreviewTreeView" Style="{DynamicResource ModernTreeViewStyle}" BorderThickness="0"/>
                                            </Border>

                                        </Grid>
                                    </Border>

                                    <!-- CARTE LOGS -->
                                    <Border Grid.Row="1" Style="{DynamicResource CardBorderStyle}" Padding="0" ClipToBounds="True">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header Logs -->
                                            <Border Grid.Row="0" Background="{DynamicResource BackgroundLightBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,0,1" Padding="15,8">
                                                <Grid>
                                                    <TextBlock Text="Journal des OpÃ©rations" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                        <TextBlock Text="Niveau :" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                        <ComboBox x:Name="LogLevelComboBox" Width="80" Height="24" FontSize="11" SelectedIndex="1" Margin="0,0,10,0">
                                                            <ComboBoxItem Content="Light" Tag="Light"/>
                                                            <ComboBoxItem Content="Normal" Tag="Normal"/>
                                                            <ComboBoxItem Content="Expert" Tag="Hard"/>
                                                        </ComboBox>
                                                        <Ellipse Width="10" Height="10" Fill="#FF5F56" Margin="0,0,6,0"/>
                                                        <Ellipse Width="10" Height="10" Fill="#FFBD2E" Margin="0,0,6,0"/>
                                                        <Ellipse Width="10" Height="10" Fill="#27C93F"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>

                                            <RichTextBox Grid.Row="1" x:Name="LogRichTextBox" Style="{DynamicResource StandardRichTextBoxStyle}" BorderThickness="0" Background="{DynamicResource WhiteBrush}" FontFamily="Consolas" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        </Grid>
                                    </Border>

                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </TabItem>

                <!-- PLACEHOLDERS -->
                <TabItem Header="âœï¸ Ã‰diteur de ModÃ¨le">
                    <Grid Background="{DynamicResource WhiteBrush}">

                    </Grid>
                </TabItem>

                <TabItem Header="ðŸ“‹ Formulaire Destination">
                    <Grid Background="{DynamicResource WhiteBrush}">

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- =============================================================== -->
        <!-- 3. PIED DE PAGE (Footer) -->
        <!-- =============================================================== -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Barre de progression -->
            <ProgressBar Grid.Row="0" x:Name="MainProgressBar" Height="4" BorderThickness="0" Background="{DynamicResource BorderLightBrush}" Foreground="{DynamicResource PrimaryBrush}" VerticalAlignment="Top"/>

            <!-- Contenu Footer -->
            <Border Grid.Row="1" Background="{DynamicResource WhiteBrush}" Padding="25,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="ProgressStatusText" Text="PrÃªt." FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel x:Name="PostDeployActionsPanel" Orientation="Horizontal" Visibility="Visible">
                            <Button x:Name="CopyUrlButton" Content="ðŸ“‹ Copier URL" Style="{DynamicResource SecondaryButtonStyle}" Height="32" FontSize="12" Margin="0,0,10,0" IsEnabled="False"/>
                            <Button x:Name="OpenUrlButton" Content="â†— Ouvrir" Style="{DynamicResource SecondaryButtonStyle}" Height="32" FontSize="12" Margin="0,0,10,0" IsEnabled="False"/>
                            <Button x:Name="DeployButton" Content="ðŸš€ Lancer le DÃ©ploiement" Style="{DynamicResource GreenButtonStyle}" Width="240" Height="40" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>