<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="SharePoint Project Manager" Height="900" Width="1400" WindowStartupLocation="CenterScreen" Background="{DynamicResource WhiteBrush}">
    <!-- 
        SYNOPSIS: Interface graphique du SharePoint Project Manager (V2: Targeted Mode).
        DESCRIPTION:
        - Mode "CiblÃ©" : L'utilisateur fournit une URL de dossier.
        - Dashboard Dynamique :
          1. Input : Zone de saisie URL & Bouton Analyse.
          2. Dashboard : ApparaÃ®t si un projet est dÃ©tectÃ© (Status, Meta, Actions).
    -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content (Input + Dashboard) -->
            <RowDefinition Height="Auto"/> <!-- Footer / Logs -->
        </Grid.RowDefinitions>

        <!-- =============================================================== -->
        <!-- 1. EN-TÃŠTE -->
        <!-- =============================================================== -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Icon -->
                    <ColumnDefinition Width="*"/>    <!-- Text -->
                    <ColumnDefinition Width="Auto"/> <!-- Auth -->
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Border Grid.Column="0" Width="50" Height="50" CornerRadius="12" Background="{DynamicResource WhiteBrush}" Margin="0,0,20,0">
                    <TextBlock Text="ðŸ› ï¸" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Text -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="SharePoint Project Manager" Foreground="{DynamicResource WhiteBrush}" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Maintenance &amp; Cycle de Vie des Dossiers" Foreground="{DynamicResource WhiteBrush}" Opacity="0.8" FontSize="14"/>
                </StackPanel>

                <!-- Auth -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ScriptAuthTextButton" Content="DÃ©connectÃ©" Foreground="{DynamicResource WhiteBrush}" Background="Transparent" BorderThickness="0" Cursor="Hand" FontWeight="SemiBold"/>
                    <Button x:Name="ScriptAuthStatusButton" Width="32" Height="32" Style="{DynamicResource ProfileButtonStyle}" Margin="10,0,0,0"/> 
                </StackPanel>
            </Grid>
        </Border>

        <!-- =============================================================== -->
        <!-- 2. CONTENU PRINCIPAL (SINGLE INPUT MODE) -->
        <!-- =============================================================== -->
        <Grid Grid.Row="1" Margin="30" Background="#F5F7FA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Input Section -->
                <RowDefinition Height="Auto"/> <!-- Loading / Error State -->
                <RowDefinition Height="*"/>    <!-- Dashboard (Details + Actions) -->
            </Grid.RowDefinitions>

            <!-- 1. INPUT SECTION (Toujours visible) -->
            <Border Grid.Row="0" Background="{DynamicResource WhiteBrush}" CornerRadius="8" Padding="25" Margin="0,0,0,20" Effect="{DynamicResource StartShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon / Label -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ðŸ“" FontSize="32" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Dossier Cible" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Collez le lien du dossier SharePoint Ã  analyser (URL standard ou Lien de partage)" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Input Box Row -->
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,20,15,0" Background="{DynamicResource InputBackgroundBrush}" CornerRadius="4" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”—" Margin="15,0,10,0" VerticalAlignment="Center" Opacity="0.5" FontSize="16"/>
                            <TextBox x:Name="TargetUrlBox" Grid.Column="1" 
                                     Background="Transparent" BorderThickness="0" Padding="5,12"
                                     Text="" ToolTip="Ex: https://tenant.sharepoint.com/sites/MonSite/Docs/MonProjet"
                                     Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14" VerticalContentAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Analyze Button -->
                    <Button x:Name="BtnAnalyze" Grid.Row="1" Grid.Column="2" Margin="0,20,0,0" Width="150" Height="45"
                            Style="{DynamicResource PrimaryButtonStyle}" Content="ANALYSER"
                            ToolTip="VÃ©rifier l'Ã©tat de ce dossier"/>
                </Grid>
            </Border>

            <!-- 2. LOADING / FEEDBACK -->
            <StackPanel x:Name="LoadingPanel" Grid.Row="1" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,20">
                <ProgressBar IsIndeterminate="True" Width="250" Height="4" Margin="0,0,0,10" Foreground="{DynamicResource PrimaryBrush}"/>
                <TextBlock Text="Analyse du dossier en cours..." HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>
            
            <Border x:Name="ErrorPanel" Grid.Row="1" Visibility="Collapsed" Background="#FFEBEE" CornerRadius="6" Padding="15" Margin="0,0,0,20" BorderBrush="#ffcdd2" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âš ï¸" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ErrorText" Text="Erreur..." Foreground="#d32f2f" TextWrapping="Wrap" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>


            <!-- 3. DASHBOARD (Hidden until loaded) -->
            <Grid x:Name="DashboardPanel" Grid.Row="2" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/> <!-- Status & Details -->
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="280"/> <!-- Actions (Fixed Width Reduced) -->
                </Grid.ColumnDefinitions>

                <!-- LEFT: STATUS & DETAILS -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="0,0,5,0">
                    <StackPanel>
                        <!-- Header : Project Identity -->
                        <Border Background="{DynamicResource WhiteBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15" Effect="{DynamicResource CardShadow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="ProjectIcon" Text="ðŸ—ï¸" FontSize="32" VerticalAlignment="Top" Margin="0,0,15,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock x:Name="ProjectTitle" Text="Nom du Projet Inconnu" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                                    <TextBlock x:Name="ProjectUrl" Text="/sites/..." FontSize="12" Foreground="{DynamicResource TextLinkBrush}" TextWrapping="Wrap" Margin="0,2,0,10" Cursor="Hand"/>
                                    
                                    <WrapPanel Orientation="Horizontal">
                                        <!-- Badges -->
                                        <Border x:Name="BadgeStatus" Background="#e8f5e9" CornerRadius="4" Padding="8,2" Margin="0,0,10,0">
                                            <TextBlock x:Name="TextStatus" Text="OK" Foreground="#2e7d32" FontWeight="SemiBold"/>
                                        </Border>
                                        <Border x:Name="BadgeConfig" Background="{DynamicResource BackgroundLightBrush}" CornerRadius="4" Padding="8,2">
                                            <TextBlock x:Name="TextConfig" Text="Config: Chantier" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </Border>
                                        <TextBlock x:Name="TextDate" Text="Dernier dÃ©ploiement: 01/01/2024" Foreground="{DynamicResource TextDisabledBrush}" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="11"/>
                                    </WrapPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- DIAGNOSTIC CARDS (Structure, Meta, Permissions) -->
                        <UniformGrid Columns="3" Margin="0,0,0,15">
                            <!-- KPI 1 : Structure -->
                            <Border Background="{DynamicResource WhiteBrush}" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="STRUCTURE" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="KpiStructure" Text="â“ Inconnu" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- KPI 2 : MÃ©tadonnÃ©es -->
                            <Border Background="{DynamicResource WhiteBrush}" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="MÃ‰TADONNÃ‰ES" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="KpiMeta" Text="â“ Inconnu" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- KPI 3 : Version -->
                            <Border Background="{DynamicResource WhiteBrush}" CornerRadius="6" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="VERSION MODÃˆLE" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="KpiVersion" Text="-" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- FORM VALUES (ReadOnly) -->
                        <Border Background="{DynamicResource WhiteBrush}" CornerRadius="8" Padding="20">
                            <StackPanel>
                                <TextBlock Text="DonnÃ©es du Deploiement" Style="{DynamicResource HeaderTextStyle}" FontSize="14" Margin="0,0,0,15"/>
                                <Grid x:Name="MetaGrid">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Populated dynamiquement -->
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>

                <!-- RIGHT: ACTIONS -->
                <Border Grid.Column="2" Background="{DynamicResource WhiteBrush}" CornerRadius="8" Padding="20" VerticalAlignment="Top" Effect="{DynamicResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Actions" Style="{DynamicResource HeaderTextStyle}" FontSize="14" Margin="0,0,0,15"/>

                        <!-- Repair (Green/Success) -->
                        <Button x:Name="BtnRepair" Style="{DynamicResource SecondaryButtonStyle}" Background="{DynamicResource SuccessBrush}" HorizontalContentAlignment="Left" Height="Auto" Padding="10" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="&#xE90F;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="RÃ©parer" FontWeight="SemiBold" Foreground="White"/>
                                    <TextBlock Text="RÃ©appliquer MÃ©ta &amp; Droits" FontSize="10" Opacity="0.8" Foreground="White" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- Rename (Blue/Info) -->
                        <Button x:Name="BtnRename" Style="{DynamicResource SecondaryButtonStyle}" Background="{DynamicResource InfoBrush}" HorizontalContentAlignment="Left" Height="Auto" Padding="10" Margin="0,0,0,10">
                             <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="&#xE8AC;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Renommer" FontWeight="SemiBold" Foreground="White"/>
                                    <TextBlock Text="Changer code projet/annÃ©e" FontSize="10" Opacity="0.8" Foreground="White" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Button>
                        
                        <Separator Background="{DynamicResource BorderLightBrush}" Margin="0,15"/>

                        <!-- Forget (Red/Danger) -->
                        <Button x:Name="BtnForget" Style="{DynamicResource SecondaryButtonStyle}" Background="{DynamicResource DangerBrush}" HorizontalContentAlignment="Left" Height="Auto" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Oublier ce projet" FontWeight="SemiBold" Foreground="White"/>
                                    <TextBlock Text="Supprimer le suivi (Bdd)" FontSize="10" Opacity="0.8" Foreground="White" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                    </StackPanel>
                </Border>

            </Grid>
        </Grid>

        <!-- =============================================================== -->
        <!-- 3. LOGS (FOOTER) -->
        <!-- =============================================================== -->
        <Border Grid.Row="2" Background="{DynamicResource WhiteBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,1,0,0" Height="150">
             <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Journal d'exÃ©cution" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" Margin="10,5,0,5"/>
                <RichTextBox x:Name="LogRichTextBox" Grid.Row="1" IsReadOnly="True" VerticalScrollBarVisibility="Auto" BorderThickness="0" FontFamily="Consolas" Padding="10" Background="White">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="Mode CiblÃ© prÃªt." Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
             </Grid>
        </Border>

        <!-- =============================================================== -->
        <!-- OVERLAY CONNEXION -->
        <!-- =============================================================== -->
        <Grid x:Name="AuthOverlay" Grid.Row="1" Background="#F0FFFFFF" Visibility="Visible">
             <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”’" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Connexion Requise" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="Connectez-vous pour commencer l'analyse." HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,10,0,30"/>
                <Button x:Name="OverlayConnectButton" Content="Se Connecter Ã  Microsoft 365" Width="250" Height="50" Style="{DynamicResource PrimaryButtonStyle}"/>
             </StackPanel>
        </Grid>

    </Grid>
</Window>
