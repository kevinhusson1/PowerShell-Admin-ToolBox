<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="SharePoint Renamer" Height="880" Width="1200" WindowStartupLocation="CenterScreen" Background="{DynamicResource WhiteBrush}">
    <!-- 
        SYNOPSIS: Interface graphique du SharePoint Renamer.
        DESCRIPTION:
        - Layout principal avec Sidebar (Liste ModÃ¨les) et Content (DÃ©tails).
        - Contient les styles dynamiques pour les boutons et champs.
        - DÃ©finit la RichTextBox pour les logs d'exÃ©cution.
        - Utilise des Panel "Placeholder" et "AuthOverlay" pour les Ã©tats vides/dÃ©connectÃ©s.
    -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: En-tÃªte -->
            <RowDefinition Height="*"/>
            <!-- 1: Contenu -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Footer (optionnel) -->
        </Grid.RowDefinitions>

        <!-- =============================================================== -->
        <!-- 1. EN-TÃŠTE STANDARD -->
        <!-- =============================================================== -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- IcÃ´ne -->
                    <ColumnDefinition Width="*"/>
                    <!-- Textes -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Auth -->
                </Grid.ColumnDefinitions>

                <!-- IcÃ´ne -->
                <Border Grid.Column="0" Width="56" Height="56" CornerRadius="20" BorderBrush="{DynamicResource WhiteBrush}" BorderThickness="2" Background="{DynamicResource PrimaryLightBrush}">
                    <Rectangle Fill="{DynamicResource WhiteBrush}" Margin="14">
                        <Rectangle.OpacityMask>
                            <ImageBrush x:Name="HeaderIconBrush" Stretch="Uniform"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Border>

                <!-- Textes -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="HeaderTitleText" Text="##loc:default_ui.window_title##" Foreground="{DynamicResource WhiteBrush}" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock x:Name="HeaderSubtitleText" Text="##loc:sp_deploy.placeholder_select##" Foreground="{DynamicResource WhiteBrush}" Opacity="0.8" FontSize="14"/>
                </StackPanel>

                <!-- Auth -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ScriptAuthTextButton" Content="##loc:sp_deploy.status_disconnected##" Margin="0,0,10,0" VerticalAlignment="Center" Cursor="Hand" FontSize="13" FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="ScriptAuthStatusButton" Style="{DynamicResource ProfileButtonStyle}" Width="32" Height="32" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- =============================================================== -->
        <!-- 2. CONTENU -->
        <!-- =============================================================== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Main -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar (Liste Configs) -->
            <Border Grid.Column="0" Background="{DynamicResource WhiteBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="MODÃˆLES DISPONIBLES" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" Margin="20,20,20,10"/>

                    <ListBox x:Name="ConfigListBox" Grid.Row="1" Margin="10,0,10,10" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" CornerRadius="8" Background="{DynamicResource WhiteBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                                    <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                                    <Setter TargetName="Bd" Property="Background" Value="#F0F9FF"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource BorderMediumBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Width="36" Height="36" CornerRadius="18" Background="{DynamicResource PrimaryLightBrush}" Margin="0,0,12,0">
                                        <TextBlock Text="ðŸ“" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ConfigName}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding LibraryName}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

                <!-- Main Panel -->
            <Grid Grid.Column="1" Background="{DynamicResource WhiteBrush}">
                <!-- Placeholder (Aucune sÃ©lection) -->
                <StackPanel x:Name="PlaceholderPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
                    <TextBlock Text="â¬…ï¸" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                    <TextBlock x:Name="PlaceholderText" Text="##loc:sp_deploy.placeholder_msg##" FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,20,0,0"/>
                </StackPanel>

                <!-- Detail Panel (RENAMER SPECIFIC) -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" BorderThickness="0" Margin="0">
                    <Grid x:Name="DetailGrid" Visibility="Collapsed" Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Title -->
                            <RowDefinition Height="Auto"/> <!-- Renamer Target Picker -->
                            <RowDefinition Height="Auto"/> <!-- Form (was *) -->
                            <RowDefinition Height="Auto"/> <!-- Preview Box -->
                            <RowDefinition Height="Auto"/> <!-- Buttons -->
                            <RowDefinition Height="Auto"/> <!-- Logs -->
                        </Grid.RowDefinitions>

                    <!-- Titre Config -->
                    <TextBlock x:Name="ConfigTitleText" Text="TITRE CONFIG" FontSize="20" Grid.Row="0" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                    <Border Grid.Row="1" Background="{DynamicResource WhiteBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,20" x:Name="TargetPanel">
                         <Grid>
                             <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="2*"/>
                                 <ColumnDefinition Width="1*"/>
                             </Grid.ColumnDefinitions>
                             
                             <!-- Left Col: Picker & Tree -->
                             <Grid Grid.Column="0" Margin="0,0,15,0">
                                 <Grid.RowDefinitions>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition Height="*"/>
                                 </Grid.RowDefinitions>

                                 <StackPanel Grid.Row="0">
                                     <TextBlock Text="##loc:renamer.target_folder_label##" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                     <Grid>
                                         <Grid.ColumnDefinitions>
                                             <ColumnDefinition Width="*"/>
                                             <ColumnDefinition Width="Auto"/>
                                         </Grid.ColumnDefinitions>
                                         <TextBox x:Name="TargetFolderBox" IsReadOnly="True" Padding="8" VerticalContentAlignment="Center" Background="{DynamicResource InputBackgroundBrush}" BorderBrush="{DynamicResource BorderLightBrush}" Text="Aucun dossier..."/>
                                         <Button x:Name="BtnPickFolder" Grid.Column="1" Content="##loc:renamer.btn_pick##" Margin="10,0,0,0" Width="100" Style="{DynamicResource SecondaryButtonStyle}"/>
                                     </Grid>
                                 </StackPanel>

                                 <!-- TreeView Picker (Inline) -->
                                 <Border Grid.Row="1" x:Name="TargetExplorerBorder" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,1,0,0" Margin="0,10,0,0" Visibility="Collapsed" Height="300">
                                    <Grid>
                                        <TreeView x:Name="TargetExplorerTreeView" Style="{DynamicResource ModernTreeViewStyle}" BorderThickness="0" Padding="5">
                                            <!-- Sera rempli dynamiquement -->
                                            <TreeViewItem Header="Chargement..." Foreground="{DynamicResource TextDisabledBrush}" FontStyle="Italic" IsEnabled="False"/>
                                        </TreeView>

                                        <!-- Overlay de chargement (discret) -->
                                        <Grid x:Name="ExplorerLoadingOverlay" Background="#40FFFFFF" Visibility="Collapsed" IsHitTestVisible="True">
                                            <ProgressBar Width="100" Height="4" IsIndeterminate="True" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                 </Border>
                             </Grid>

                             <!-- Right Col: Metadata -->
                             <Border Grid.Column="1" Background="{DynamicResource BackgroundBrush}" CornerRadius="4" Padding="10">
                                 <ScrollViewer VerticalScrollBarVisibility="Auto">
                                     <StackPanel>
                                        <TextBlock Text="MÃ‰TADONNÃ‰ES" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextDisabledBrush}" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="CurrentMetaText" Text="Aucune sÃ©lection." FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                                     </StackPanel>
                                 </ScrollViewer>
                             </Border>

                         </Grid>
                    </Border>

                    <!-- Formulaire (Hydrated) -->
                    <Border Grid.Row="2" x:Name="FormPanel" Background="{DynamicResource WhiteBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" CornerRadius="4" Padding="10">
                         <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="DynamicFormPanel"> <!-- Name separation: Border is FormPanel (Visibility), StackPanel is DynamicFormPanel (Content) -->
                                <!-- Injected inputs -->
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Preview Box -->
                    <Border Grid.Row="3" Background="{DynamicResource PrimaryLightBrush}" CornerRadius="4" Padding="15" Margin="0,20,0,20">
                         <StackPanel Orientation="Horizontal">
                             <TextBlock Text="##loc:renamer.preview_label##" FontWeight="Bold" Foreground="{DynamicResource WhiteBrush}"/>
                             <TextBlock x:Name="FolderNamePreviewText" Text="..." Foreground="{DynamicResource WhiteBrush}" FontWeight="SemiBold"/>
                         </StackPanel>
                    </Border>

                    <!-- Boutons Action -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
                        <Button x:Name="BtnOpenDest" Content="Ouvrir destination" Width="160" Height="40" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,10,0" IsEnabled="False"/>
                        <Button x:Name="BtnRename" Content="##loc:renamer.btn_apply##" Width="200" Height="40" Style="{DynamicResource PrimaryButtonStyle}"/>
                    </StackPanel>

                    <!-- Logs -->
                    <StackPanel Grid.Row="5">
                        <TextBlock Text="##loc:renamer.execution_log_title##" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <Border BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" CornerRadius="4" Height="150">
                            <RichTextBox x:Name="LogRichTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" BorderThickness="0" Padding="10" FontFamily="Consolas">
                                <FlowDocument>
                                    <Paragraph>
                                        <Run Text="En attente..." Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                        </Border>
                    </StackPanel>
                </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
        
        <!-- Overlay de Connexion Requis (Standard Deployer) -->
        <Grid x:Name="AuthOverlay" Grid.Row="1" Background="{DynamicResource WhiteBrush}" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”’" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="##loc:sp_deploy.auth_required_title##" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="##loc:sp_deploy.auth_required_message##" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap" MaxWidth="300" TextAlignment="Center"/>
                <Button x:Name="OverlayConnectButton" Content="##loc:sp_deploy.auth_connect_button##" Style="{DynamicResource PrimaryButtonStyle}" Width="200" Height="40" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
