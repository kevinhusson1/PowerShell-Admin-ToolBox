<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="##loc:ui.window_title##" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Background="{DynamicResource WhiteBrush}" TextOptions.TextFormattingMode="Display" UseLayoutRounding="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: En-tÃªte Standard -->
            <RowDefinition Height="*"/>
            <!-- 1: Contenu Principal -->
        </Grid.RowDefinitions>

        <!-- =============================================================== -->
        <!-- 1. EN-TÃŠTE STANDARD (Avec Module IdentitÃ©) -->
        <!-- =============================================================== -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- IcÃ´ne App -->
                    <ColumnDefinition Width="*"/>
                    <!-- Titres -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- IdentitÃ© (NOUVEAU) -->
                </Grid.ColumnDefinitions>

                <!-- Colonne 0 : Conteneur de l'icÃ´ne -->
                <Border Grid.Column="0" Width="56" Height="56" CornerRadius="20" BorderBrush="{DynamicResource WhiteBrush}" BorderThickness="2" Background="{DynamicResource PrimaryLightBrush}">
                    <Rectangle Fill="{DynamicResource WhiteBrush}" Margin="14">
                        <Rectangle.OpacityMask>
                            <ImageBrush x:Name="HeaderIconBrush" Stretch="Uniform"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Border>

                <!-- Colonne 1 : Textes -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="HeaderTitleText" Text="##loc:scripts.DefaultUI.name##" Foreground="{DynamicResource WhiteBrush}" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock x:Name="HeaderSubtitleText" Text="##loc:scripts.DefaultUI.description##" Foreground="{DynamicResource WhiteBrush}" Opacity="0.8" FontSize="14"/>
                </StackPanel>

                <!-- Colonne 2 : Module IdentitÃ© (NOUVEAU) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                    <!-- Nom / Ã‰tat (Texte) -->
                    <Button x:Name="ScriptAuthTextButton" Content="Non connectÃ©" Margin="0,0,10,0" VerticalAlignment="Center" Cursor="Arrow" FontSize="13" FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}"/>
                                <!-- Blanc sur fond bleu -->
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Macaron (Cercle) -->
                    <Button x:Name="ScriptAuthStatusButton" Style="{DynamicResource ProfileButtonStyle}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- =============================================================== -->
        <!-- 2. CONTENU PRINCIPAL -->
        <!-- =============================================================== -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Splitter -->
                <ColumnDefinition Width="Auto" x:Name="SidebarColumn"/>
                <!-- Sidebar -->
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Filtres -->
                    <RowDefinition Height="*"/>
                    <!-- DataGrid -->
                    <RowDefinition Height="Auto"/>
                    <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- Filtres -->
                <Border Grid.Row="0" Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Ligne 1 : Selecteurs -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Poste :" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <ComboBox x:Name="ComboBoxPoste" Grid.Row="0" Grid.Column="1" Style="{DynamicResource StandardComboBoxStyle}"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Service :" VerticalAlignment="Center" FontWeight="SemiBold" Margin="20,0,10,0"/>
                        <ComboBox x:Name="ComboBoxDepartement" Grid.Row="0" Grid.Column="3" Style="{DynamicResource StandardComboBoxStyle}"/>

                        <Button x:Name="ButtonResetFilters" Grid.Row="0" Grid.Column="5" Content="RÃ©initialiser Filtres" Style="{DynamicResource SecondaryButtonStyle}" Padding="15,6"/>

                        <!-- Ligne 2 : Recherche -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Rechercher (min 3 car.) :" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBox x:Name="TextBoxRecherche" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" Style="{DynamicResource StandardTextBoxStyle}"/>
                    </Grid>
                </Border>

                <!-- DataGrid -->
                <DataGrid x:Name="DataGridUsers" Grid.Row="1" SelectionUnit="FullRow" Style="{DynamicResource StandardDataGridStyle}" ColumnHeaderStyle="{DynamicResource StandardDataGridColumnHeaderStyle}" RowStyle="{DynamicResource StandardDataGridRowStyle}">
                    <DataGrid.Columns>
                        <!-- Nom (Bleu) -->
                        <DataGridTemplateColumn Header="##loc:ui.headers.display_name##" Width="2*" SortMemberPath="DisplayName">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" Style="{DynamicResource LinkTextStyle}" VerticalAlignment="Center" Margin="5,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Email (Bleu) -->
                        <DataGridTemplateColumn Header="##loc:ui.headers.mail##" Width="2.5*" SortMemberPath="Mail">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Mail}" Style="{DynamicResource LinkTextStyle}" VerticalAlignment="Center" Margin="5,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Autres Colonnes (Texte Standard) -->
                        <DataGridTextColumn Header="##loc:ui.headers.job_title##" Binding="{Binding JobTitle}" Width="1.5*"/>
                        <DataGridTextColumn Header="##loc:ui.headers.department##" Binding="{Binding Department}" Width="1.5*"/>
                        <DataGridTextColumn Header="##loc:ui.headers.phone_work##" Binding="{Binding PrimaryBusinessPhone}" Width="1.2*"/>
                        <DataGridTextColumn Header="##loc:ui.headers.phone_mobile##" Binding="{Binding MobilePhone}" Width="1.2*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Message No Data -->
                <Border x:Name="NoDataMessageBorder" Grid.Row="1" Background="{DynamicResource WhiteBrush}" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Aucun rÃ©sultat trouvÃ©." FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="Essayez de modifier vos filtres." FontSize="14" HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Footer -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="LabelStatus" Text="Chargement..." VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <Button x:Name="ButtonExport" Grid.Column="1" Content="Exporter la Vue" Style="{DynamicResource PrimaryButtonStyle}" Width="150"/>
                </Grid>
            </Grid>

            <!-- SPLITTER -->
            <GridSplitter x:Name="DetailGridSplitter" Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent" ShowsPreview="True" Visibility="Collapsed"/>

            <!-- SIDEBAR DÃ‰TAILS -->
            <Border x:Name="DetailSidebar" Grid.Column="2" MinWidth="350" Background="{DynamicResource WhiteBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,0,0" Margin="10,0,0,0" Padding="25" Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="Auto"/>
                        <!-- Avatar -->
                        <RowDefinition Height="Auto"/>
                        <!-- Section 1 -->
                        <RowDefinition Height="Auto"/>
                        <!-- Section 2 (Actions) -->
                        <RowDefinition Height="Auto"/>
                        <!-- Section 3 (Content) -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header Sidebar -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="DÃ©tails de l'Utilisateur" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>

                        <!-- Bouton Fermer (Style Croix Rouge au survol) -->
                        <Button x:Name="CloseSidebarButton" Grid.Column="1" Content="âœ•" Cursor="Hand" ToolTip="Fermer" BorderThickness="0" Background="Transparent" FontSize="14" FontWeight="Bold" Width="30" Height="30">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="#94A3B8"/>
                                    <!-- Slate-400 -->
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#EF4444"/>
                                            <!-- Red-500 -->
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <!-- Profile Header (Avatar + Nom) -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Style="{DynamicResource LargeAvatarBorderStyle}" Margin="0,0,15,0">
                            <Grid>
                                <!-- Initiales (Fond) -->
                                <TextBlock x:Name="DetailAvatarText" Style="{DynamicResource LargeAvatarTextStyle}"/>
                                <!-- Photo (SuperposÃ©e) -->
                                <Border x:Name="DetailAvatarBorder" CornerRadius="32" Width="64" Height="64" BorderThickness="2" BorderBrush="{DynamicResource PrimaryLightBrush}">
                                    <Border.Background>
                                        <ImageBrush x:Name="DetailAvatarImage" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                            </Grid>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="DetailDisplayName" Text="-" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                            <TextBlock x:Name="DetailJobTitle" Text="-" FontSize="14" Foreground="{DynamicResource PrimaryBrush}" Margin="0,2,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Barre d'Actions Rapides -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20">
                        <!-- Bouton Teams -->
                        <Button x:Name="ButtonActionTeams" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,10,0" ToolTip="Ouvrir dans Teams" Padding="10,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’¬" Margin="0,0,8,0" FontSize="14"/>
                                <TextBlock Text="Chat" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Bouton Mail -->
                        <Button x:Name="ButtonActionMail" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,10,0" ToolTip="Envoyer un e-mail" Padding="10,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ‰" Margin="0,0,8,0" FontSize="14"/>
                                <TextBlock Text="Mail" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                         <!-- Bouton Copie -->
                        <Button x:Name="ButtonActionCopy" Style="{DynamicResource SecondaryButtonStyle}" ToolTip="Copier l'e-mail" Padding="10,6">
                            <TextBlock Text="ðŸ“‹" FontSize="14"/>
                        </Button>
                    </StackPanel>

                    <!-- Section Content (Scrollable) -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Info GÃ©nÃ©rales -->
                            <TextBlock Text="Informations GÃ©nÃ©rales" Style="{DynamicResource SectionHeaderStyle}" Margin="0,0,0,15"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Email :" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="DetailEmail" Text="-" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" TextWrapping="Wrap" Margin="-2,0,0,15"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="TÃ©l. Pro :" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="DetailPhoneWork" Text="-" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" TextWrapping="Wrap" Margin="-2,0,0,15"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Mobile :" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <TextBox Grid.Row="2" Grid.Column="1" x:Name="DetailPhoneMobile" Text="-" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" TextWrapping="Wrap" Margin="-2,0,0,15"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="ID Objet :" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,4"/>
                                <TextBox Grid.Row="3" Grid.Column="1" x:Name="DetailObjectId" Text="-" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11" TextWrapping="Wrap" Margin="-2,0,0,15"/>
                            </Grid>

                            <!-- Organisation -->
                            <TextBlock Text="Organisation" Style="{DynamicResource SectionHeaderStyle}" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Service :" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="DetailDepartment" Text="-" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" TextWrapping="Wrap" Margin="-2,0,0,15"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="SociÃ©tÃ© :" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="DetailCompany" Text="-" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" TextWrapping="Wrap" Margin="-2,0,0,15"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Ville :" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <TextBox Grid.Row="2" Grid.Column="1" x:Name="DetailCity" Text="-" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" TextWrapping="Wrap" Margin="-2,0,0,15"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Manager :" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <TextBox Grid.Row="3" Grid.Column="1" x:Name="DetailManager" Text="-" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" TextWrapping="Wrap" Margin="-2,0,0,15"/>
                            </Grid>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
