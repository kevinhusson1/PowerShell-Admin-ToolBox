<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="##loc:default_ui.window_title##"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WhiteBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 0: En-tête Standard -->
            <RowDefinition Height="*"/>    <!-- 1: Contenu Principal (Scrollable) -->
            <RowDefinition Height="Auto"/> <!-- 2: Pied de page (Actions) -->
        </Grid.RowDefinitions>

        <!-- =============================================================== -->
        <!-- 1. EN-TÊTE STANDARD (Avec Module Identité) -->
        <!-- =============================================================== -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Icône App -->
                    <ColumnDefinition Width="*"/>    <!-- Titres -->
                    <ColumnDefinition Width="Auto"/> <!-- Identité (NOUVEAU) -->
                </Grid.ColumnDefinitions>
                
                <!-- Colonne 0 : Conteneur de l'icône -->
                <Border Grid.Column="0" Width="56" Height="56" CornerRadius="20" 
                        BorderBrush="{DynamicResource WhiteBrush}" BorderThickness="2"
                        Background="{DynamicResource PrimaryLightBrush}">
                    <Rectangle Fill="{DynamicResource WhiteBrush}" Margin="14">
                        <Rectangle.OpacityMask>
                            <ImageBrush x:Name="HeaderIconBrush" Stretch="Uniform"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Border>
                
                <!-- Colonne 1 : Textes -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="HeaderTitleText" Text="##loc:scripts.DefaultUI.name##" Foreground="{DynamicResource WhiteBrush}" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock x:Name="HeaderSubtitleText" Text="##loc:scripts.DefaultUI.description##" Foreground="{DynamicResource WhiteBrush}" Opacity="0.8" FontSize="14"/>
                </StackPanel>

                <!-- Colonne 2 : Module Identité (NOUVEAU) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    
                    <!-- Nom / État (Texte) -->
                    <Button x:Name="ScriptAuthTextButton" 
                            Content="Non connecté"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Cursor="Arrow"
                            FontSize="13"
                            FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}"/> <!-- Blanc sur fond bleu -->
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Macaron (Cercle) -->
                    <Button x:Name="ScriptAuthStatusButton" 
                            Style="{DynamicResource ProfileButtonStyle}" 
                            VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- =============================================================== -->
        <!-- 2. ZONE DE CONTENU (Zone de travail du développeur) -->
        <!-- =============================================================== -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
            <StackPanel>
                
                <!-- Exemple de contenu -->
                <TextBlock Text="Zone de Contenu Principale" Style="{DynamicResource H3Style}" Margin="0,0,0,20"/>
                
                <Border Background="{DynamicResource BackgroundMediumBrush}" CornerRadius="8" Padding="20" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="##loc:default_ui.sample_text##" Foreground="{DynamicResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                        <TextBlock Text="Utilisez cet espace pour placer vos formulaires, tableaux de bord ou contrôles." 
                                   Margin="0,10,0,0" Foreground="{DynamicResource TextSecondaryBrush}" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- =============================================================== -->
        <!-- 3. PIED DE PAGE (Actions Globales) -->
        <!-- =============================================================== -->
        <Border Grid.Row="2" Background="{DynamicResource WhiteBrush}" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderLightBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Zone Status / Info (Gauche) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ℹ️" Margin="0,0,10,0"/>
                    <TextBlock Text="##loc:default_ui.footer_info##" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                </StackPanel>

                <!-- Zone Boutons (Droite) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Annuler" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Action Principale" Style="{DynamicResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>