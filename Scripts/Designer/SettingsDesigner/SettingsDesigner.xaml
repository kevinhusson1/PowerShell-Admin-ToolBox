                        </ComboBox>
                    </ContentControl>
                </StackPanel>
            </Expander>

            <Button x:Name="SettingsSaveButton" Content="##loc:settings.save_button##" Style="{DynamicResource PrimaryButtonStyle}" HorizontalAlignment="Right" Margin="0,10,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Window>