<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="##loc:designer.settings.window_title##"
        Width="800" Height="700"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="25">
            
            <!-- Carte 1 : ParamÃ¨tres GÃ©nÃ©raux -->
            <Expander x:Name="GeneralSettingsCard" Style="{DynamicResource CardExpanderStyle}" IsExpanded="True">
                <StackPanel Margin="0,10,0,0">
                    <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.company_name##">
                        <TextBox x:Name="SettingsCompanyNameTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸ¢"/>
