                    <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.security_admingroup##">
                        <TextBox x:Name="SettingsAdminGroupTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸ‘¥"/>
                    </ContentControl>
                    <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.security_startupmode##">
