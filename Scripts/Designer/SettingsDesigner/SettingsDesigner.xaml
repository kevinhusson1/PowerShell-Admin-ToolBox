                    <Expander Header="##loc:settings.azure_usermode##" IsExpanded="True" Margin="0,5,0,0">
                        <StackPanel Margin="15,10,0,5">
                            <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.azure_appid##">
                                <TextBox x:Name="SettingsUserAuthAppIdTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸ†”"/>
                            </ContentControl>
                            <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.azure_scopes##">
