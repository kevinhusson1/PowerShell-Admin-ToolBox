                            <ComboBoxItem>en-US</ComboBoxItem>
                        </ComboBox>
                    </ContentControl>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <CheckBox x:Name="SettingsVerboseLoggingCheckBox" Style="{DynamicResource ToggleSwitchStyle}"/>
                        <TextBlock Text="##loc:settings.enable_verbose##" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!-- Carte 2 : Interface Utilisateur -->
            <Expander x:Name="UiSettingsCard" Style="{DynamicResource CardExpanderStyle}" IsExpanded="True">
