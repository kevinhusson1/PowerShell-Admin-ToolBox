<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="XmlEditorWindow"
    Title="Ã‰diteur XML" 
    Height="700" 
    Width="1200" 
    WindowStartupLocation="CenterScreen"
    Background="#FAFBFC"
    FontFamily="Segoe UI"
    ResizeMode="CanResize">

    <Window.Resources>
        <ContextMenu x:Key="AddElementMenu" x:Name="AddElementContextMenu" />
        
        <Style x:Key="ModernTreeViewStyle" TargetType="TreeView">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="ExpandCollapseToggleStyle" TargetType="ToggleButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Width="12" Height="12" SnapsToDevicePixels="True">
                            <Path x:Name="ExpandPath" Fill="#555" Stroke="#555" StrokeThickness="0.5"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  Data="M 0 0 L 4 4 L 0 8 Z" /> <!-- FlÃ¨che droite â–º -->
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <!-- On tourne la flÃ¨che de 90 degrÃ©s pour qu'elle pointe vers le bas -->
                                <Setter TargetName="ExpandPath" Property="Data" Value="M 0 0 L 8 0 L 4 4 Z" /> <!-- FlÃ¨che bas â–¼ -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernTreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="Padding" Value="5,3"/><Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>
                            <Border x:Name="Bd" Background="Transparent" BorderThickness="1" BorderBrush="Transparent" CornerRadius="4" Padding="{TemplateBinding Padding}" Margin="0,2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <!-- On donne un nom Ã  la colonne pour pouvoir la cibler -->
                                        <ColumnDefinition x:Name="ExpanderColumn" Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="Expander" Grid.Column="0" IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}" Style="{StaticResource ExpandCollapseToggleStyle}"/>
                                    <ContentPresenter x:Name="PART_Header" Grid.Column="1" ContentSource="Header" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Margin="19,0,0,0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="false"><Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/></Trigger>
                            <Trigger Property="HasItems" Value="false">
                                <!-- Collapsed retire l'espace, Hidden le conserve. -->
                                <Setter TargetName="Expander" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="ExpanderColumn" Property="Width" Value="0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true"><Setter TargetName="Bd" Property="Background" Value="#F0F8FF"/></Trigger>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="Bd" Property="Background" Value="#D6EAF8"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false"><Setter Property="Foreground" Value="#CCCCCC"/></Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- La grille principale reste la mÃªme que votre version amÃ©liorÃ©e -->
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        

        <Menu Grid.Row="0" Style="{DynamicResource WindowsMenuStyle}" FlowDirection="LeftToRight" Padding="8,4">
            <MenuItem Header="_Fichier" Style="{DynamicResource WindowsMenuItemStyle}">
                <MenuItem x:Name="ButtonNew" Header="_Nouveau" ToolTip="CrÃ©er un nouveau fichier XML" Style="{DynamicResource WindowsMenuItemStyle}"/>
                <MenuItem x:Name="ButtonOpen" Header="_Ouvrir..." ToolTip="Ouvrir un fichier XML existant" Style="{DynamicResource WindowsMenuItemStyle}"/>
                <Separator />
                <MenuItem x:Name="ButtonSave" Header="_Sauvegarder" ToolTip="Enregistrer le fichier XML" Style="{DynamicResource WindowsMenuItemStyle}"/>
                <MenuItem x:Name="ButtonSaveAs" Header="Sauvegarder _sous..." Style="{DynamicResource WindowsMenuItemStyle}"/>
                <Separator />
                <MenuItem x:Name="ButtonClose" Header="_Fermer" ToolTip="Fermer la fenÃªtre de l'Ã©diteur" Style="{DynamicResource WindowsMenuItemStyle}"/>
            </MenuItem>
            <MenuItem Header="_Outils" Style="{DynamicResource WindowsMenuItemStyle}">
                <MenuItem x:Name="ButtonValidateXml" Header="_VÃ©rifier le XML" ToolTip="GÃ©nÃ¨re et ouvre le fichier XML dans l'Ã©diteur par dÃ©faut" Style="{DynamicResource WindowsMenuItemStyle}"/>
            </MenuItem>
        </Menu>

        <!-- En-tÃªte avec logo et titre -->
        <DockPanel Grid.Row="1" Margin="20,10,20,0">
            <!-- Logo placeholder -->
            <Border Background="{DynamicResource PrimaryColor}" Width="60" Height="60" CornerRadius="30" DockPanel.Dock="Left">
                <TextBlock Text="X" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>            
            <StackPanel Margin="15,10,0,0">
                <TextBlock Text="Editeur de XML" Style="{DynamicResource H1Style}"/>
                <TextBlock Text="Permet de crÃ©er et modifier des fichiers XML" Style="{DynamicResource H2Style}"/>
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="2" Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="350"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,1,1,0" 
                        CornerRadius="8,8,0,0" Padding="12,8">
                    <TextBlock Text="Structure XML" FontWeight="SemiBold" FontSize="14" Foreground="#333333"/>
                </Border>

                <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,1,0" Padding="0">
                    <ScrollViewer x:Name="TreeViewScrollViewer" 
                                  VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Auto"
                                  Padding="4">
                        <TreeView x:Name="XmlTreeView" 
                                  Style="{StaticResource ModernTreeViewStyle}"
                                  ItemContainerStyle="{StaticResource ModernTreeViewItemStyle}"/>
                    </ScrollViewer>
                </Border>

                <Border Grid.Row="2" Padding="12" Background="White" 
                        BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" 
                        CornerRadius="0,0,8,8">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                            <Button x:Name="ButtonAddElement" Content="+" 
                                    ToolTip="Ajouter un nouvel Ã©lÃ©ment enfant" 
                                    Style="{DynamicResource IconButton_GreenStyle}" 
                                    Margin="2" IsEnabled="False"/>
                        </StackPanel>
                        
                        <Rectangle Width="1" Height="20" Fill="#E0E0E0" Margin="4,0"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <Button x:Name="ButtonDuplicate" Content="ðŸ“‹" 
                                    ToolTip="Dupliquer l'Ã©lÃ©ment sÃ©lectionnÃ©" 
                                    Style="{DynamicResource IconButton_SecondaryStyle}" 
                                    Margin="2" IsEnabled="False" FontSize="16"/>
                            <Button x:Name="ButtonMoveUp" Content="â–²" 
                                    ToolTip="Monter l'Ã©lÃ©ment" 
                                    Style="{DynamicResource IconButton_SecondaryStyle}" 
                                    Margin="2" IsEnabled="False"/>
                            <Button x:Name="ButtonMoveDown" Content="â–¼" 
                                    ToolTip="Descendre l'Ã©lÃ©ment" 
                                    Style="{DynamicResource IconButton_SecondaryStyle}" 
                                    Margin="2" IsEnabled="False"/>
                        </StackPanel>
                        
                        <Rectangle Width="1" Height="20" Fill="#E0E0E0" Margin="4,0"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="8,0,0,0">
                            <Button x:Name="ButtonDelete" Content="ðŸ—‘" 
                                    ToolTip="Supprimer l'Ã©lÃ©ment sÃ©lectionnÃ© et ses enfants" 
                                    Style="{DynamicResource IconButton_RedStyle}" 
                                    Margin="2" IsEnabled="False" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <GridSplitter Grid.Column="1" Width="8" HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch" Background="#F0F0F0" 
                          BorderBrush="#E0E0E0" BorderThickness="1,0"/>

            <Border Grid.Column="2" Background="White" BorderBrush="#E0E0E0" 
                    BorderThickness="1" CornerRadius="8" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,0,1" CornerRadius="8,8,0,0" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="PropriÃ©tÃ©s" FontWeight="SemiBold" 
                                       FontSize="14" Foreground="#333333" VerticalAlignment="Center"/>
                            <Ellipse Grid.Column="1" Width="8" Height="8" Fill="#4CAF50" 
                                     x:Name="PropertiesIndicator" Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
                        <StackPanel>
                            <TextBlock x:Name="PropertiesPanel_InstructionText"
                                       Text="SÃ©lectionnez un Ã©lÃ©ment dans l'arborescence pour voir et modifier ses propriÃ©tÃ©s."
                                       Foreground="#666666" FontStyle="Italic" TextWrapping="Wrap" 
                                       LineHeight="20" Margin="0,8"/>
                            
                            <StackPanel x:Name="PropertiesHostPanel" Margin="0,16,0,0" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <Border Grid.Row="3" Background="#F8F9FA" BorderThickness="0,1,0,0" 
                BorderBrush="#E0E0E0" Padding="20,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" 
                               Text="PrÃªt. CrÃ©ez ou ouvrez un fichier XML pour commencer." 
                               Style="{DynamicResource StatusTextStyle}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" x:Name="ElementCountText" Text="" 
                           Style="{DynamicResource StatusTextStyle}" 
                           Margin="16,0" VerticalAlignment="Center" 
                           Foreground="#666666"/>
                
                <TextBlock Grid.Column="2" x:Name="LabelCurrentFile" Text="" 
                           Style="{DynamicResource StatusTextStyle}" 
                           VerticalAlignment="Center" Foreground="#666666"/>
            </Grid>
        </Border>
    </Grid>
</Window>