<!-- Templates/Components/Inputs/ToggleSwitch.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type CheckBox}" x:Key="ToggleSwitchStyle">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid x:Name="mainGrid" Width="36" Height="20" VerticalAlignment="Center">
                        <!-- La "piste" -->
                        <Border x:Name="Track" CornerRadius="10" Background="{DynamicResource Gray300Brush}"/>
                        
                        <!-- Le "pouce" -->
                        <Border x:Name="Thumb" CornerRadius="8" Width="16" Height="16" 
                                Background="{DynamicResource WhiteBrush}"
                                HorizontalAlignment="Left"
                                Margin="2,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Trigger pour l'état "coché" (activé) -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Track" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                        </Trigger>
                        
                        <!-- Cas 1 : Survol ET le switch est INACTIF et ACTIVÉ -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="False"/>
                                <Condition Property="IsEnabled" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Track" Property="Background" Value="{DynamicResource Gray400Brush}"/>
                        </MultiTrigger>
                        
                        <!-- Cas 2 : Survol ET le switch est ACTIF et ACTIVÉ -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsEnabled" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Track" Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
                        </MultiTrigger>

                        <!-- Amélioration : Trigger pour l'état désactivé -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="mainGrid" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>