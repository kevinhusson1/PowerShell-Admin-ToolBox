<!-- Templates/Components/Inputs/RadioButton.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type RadioButton}" x:Key="StandardRadioButtonStyle">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Le conteneur visuel du bouton radio -->
                        <Grid Width="20" Height="20">
                            <!-- CORRECTION : Un seul cercle qui gère tout. -->
                            <Ellipse x:Name="Ring" Stroke="{DynamicResource BorderMediumBrush}" StrokeThickness="2" Fill="Transparent"/>
                        </Grid>
                        <!-- Le label du bouton radio -->
                        <ContentPresenter Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <!-- Trigger pour l'état "coché" -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Ring" Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
                            <!-- Quand il est coché, on remplit le cercle avec la couleur primaire -->
                            <Setter TargetName="Ring" Property="Fill" Value="{DynamicResource PrimaryBrush}"/>
                        </Trigger>
                        <!-- Trigger pour le survol -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Ring" Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>