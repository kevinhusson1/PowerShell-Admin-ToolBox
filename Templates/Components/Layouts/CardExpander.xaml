<!-- Templates/Components/Layouts/CardExpander.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Expander" x:Key="CardExpanderStyle">
        <Setter Property="Background" Value="{DynamicResource WhiteBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Expander">
                    <Border CornerRadius="8" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            Background="{TemplateBinding Background}">
                        <DockPanel>
                            <ToggleButton DockPanel.Dock="Top" 
                                            IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                            Cursor="Hand">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="HeaderBorder" CornerRadius="8" Padding="15,10" Background="Transparent">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Grid Grid.Column="0" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,15,0">
                                                    <Ellipse Fill="{Binding Tag.IconBackgroundColor, RelativeSource={RelativeSource AncestorType=Expander}}"/>
                                                    <TextBlock Text="{Binding Tag.Icon, RelativeSource={RelativeSource AncestorType=Expander}}" 
                                                                FontSize="16" FontFamily="Segoe UI Symbol" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                Foreground="{DynamicResource WhiteBrush}"/>
                                                </Grid>
                                                
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Tag.Title, RelativeSource={RelativeSource AncestorType=Expander}}" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Tag.Subtitle, RelativeSource={RelativeSource AncestorType=Expander}}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                                
                                                <TextBlock Grid.Column="2" x:Name="Arrow" Text="▼" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0,5,0"
                                                            Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="HeaderBorder" Property="Background" Value="{DynamicResource BackgroundHoverBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Arrow" Property="Text" Value="▲"/>
                                                <Setter TargetName="HeaderBorder" Property="CornerRadius" Value="8,8,0,0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <Border x:Name="ContentBorder" Visibility="Collapsed" Padding="20,10,20,20" DockPanel.Dock="Bottom">
                                <ContentPresenter />
                            </Border>
                        </DockPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ContentBorder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>