<!-- Templates/Components/Layouts/FormField.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ContentControl" x:Key="FormFieldStyle">
        <Setter Property="Margin" Value="0,0,0,15"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <StackPanel>
                        <!-- Le TextBlock pour le label utilise maintenant les nouvelles Brush sÃ©mantiques -->
                        <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    FontWeight="SemiBold"
                                    FontSize="13"
                                    Margin="0,0,0,5"/>
                        <ContentPresenter/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>