<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Ce style rend la RichTextBox fonctionnelle mais visuellement "nue" -->
    <Style TargetType="RichTextBox" x:Key="TransparentRichTextBoxStyle">
        <!-- On la rend complètement transparente et sans bordure -->
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        
        <!-- On garde les propriétés de comportement et de contenu -->
        <Setter Property="FontFamily" Value="Consolas, Cascadia Mono, Courier New"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <!-- Le Padding est important pour que le texte ne colle pas aux bords -->
        <Setter Property="Padding" Value="10"/> 
    </Style>

</ResourceDictionary>