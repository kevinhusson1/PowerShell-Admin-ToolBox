<!-- Templates/Components/Display/ScriptTile.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style principal pour notre ListBox en mode "Grille de tuiles" -->
    <Style x:Key="ScriptGridListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        
        <!-- On organise les éléments dans un panneau qui les "enveloppe" -->
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <WrapPanel ItemWidth="170" ItemHeight="110"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        
        <!-- On applique un DataTemplate personnalisé à chaque élément -->
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border x:Name="TileBorder" Width="160" Height="100" Margin="0" Padding="5,10,5,10"
                            Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" CornerRadius="8">                        
                        <StackPanel>
                            <!-- Conteneur pour l'icône, un peu plus petit -->
                            <Grid x:Name="TileIconGrid" Width="48" Height="48" HorizontalAlignment="Center">
                                <!-- 1. Le cercle coloré en fond -->
                                <Ellipse Fill="{Binding IconBackgroundColor}"/>
                                
                                <!-- 2. Le rectangle blanc qui SERA notre icône -->
                                <Rectangle Fill="White" Margin="12">
                                    <!-- 3. L'image PNG utilisée comme MASQUE pour le rectangle -->
                                    <Rectangle.OpacityMask>
                                        <ImageBrush ImageSource="{Binding IconSource}" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                <Border x:Name="RunningOverlay" Background="#AAFFFFFF" CornerRadius="8" Visibility="Collapsed"/>
                            </Grid>
                            
                            <TextBlock x:Name="TileText" Text="{Binding name}" TextAlignment="Center" TextWrapping="Wrap" Margin="0,10,0,0"
                                    FontWeight="SemiBold" Foreground="{DynamicResource DarkTextBrush}"/>
                        </StackPanel>

                    </Border>
                    <!-- Trigger pour l'effet visuel de la sélection -->
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                            <Setter TargetName="TileBorder" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter TargetName="TileBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="{DynamicResource PrimaryColor}" Opacity="0.3"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <!-- Condition 1: La souris est sur l'élément -->
                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True"/>
                                <!-- Condition 2: L'élément n'est PAS déjà sélectionné -->
                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="False"/>
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="TileBorder" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter TargetName="TileBorder" Property="Background" Value="#F0F9FD"/> <!-- Un fond bleu très clair -->
                        </MultiDataTrigger>
                        <DataTrigger Binding="{Binding enabled}" Value="False">
                            <!-- On grise l'icône et le texte -->
                            <Setter TargetName="TileIconGrid" Property="Opacity" Value="0.5"/>
                            <Setter TargetName="TileText" Property="Foreground" Value="{DynamicResource GrayBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                            <!-- 1. On applique un fond vert très clair, semi-transparent -->
                            <Setter TargetName="TileBorder" Property="Background" Value="#E6F4E7"/>
                            
                            <!-- 2. On change la bordure pour qu'elle soit plus épaisse et de la couleur verte principale -->
                            <Setter TargetName="TileBorder" Property="BorderBrush" Value="{DynamicResource GreenBrush}"/>
                            <Setter TargetName="TileBorder" Property="BorderThickness" Value="2"/>

                            <!-- 3. (Optionnel) On peut légèrement griser l'icône pour accentuer l'effet de "superposition" -->
                            <Setter TargetName="TileIconGrid" Property="Opacity" Value="0.8"/>
                            
                            <!-- On supprime l'effet de "lueur" (DropShadowEffect) qui n'est plus nécessaire -->
                            <Setter TargetName="TileBorder" Property="Effect" Value="{x:Null}"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <!-- On retire le style de sélection par défaut de la ListBoxItem -->
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListBoxItem">
                    <!-- ▼▼▼ AJOUTER CETTE LIGNE ▼▼▼ -->
                    <Setter Property="Cursor" Value="Hand"/>

                    <!-- Le reste du style ne change pas -->
                    <Setter Property="IsEnabled" Value="{Binding enabled}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>