<!-- Templates/Components/Display/ListBox.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style pour chaque élément de la liste de scripts -->
    <Style TargetType="ListBoxItem" x:Key="ScriptListBoxItemStyle">
        <Setter Property="Padding" Value="10,12"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#E3F3FA"/>
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F0F9FD"/>
                <Setter Property="BorderBrush" Value="#C7E8F8"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Style pour le conteneur ListBox principal -->
    <Style TargetType="ListBox" x:Key="MainListBoxStyle">
        <Setter Property="ItemContainerStyle" Value="{DynamicResource ScriptListBoxItemStyle}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>