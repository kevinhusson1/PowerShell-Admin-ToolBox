<!-- Templates/Styles/Colors.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =================================================================== -->
    <!-- SECTION 1 : DÉFINITION DES COULEURS DE BASE (PALETTE) -->
    <!-- =================================================================== -->
    
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- COULEURS PRIMAIRES & SECONDAIRES (Harmonie Triadique + Analogique) -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Couleur Primaire : Bleu Cyan (Position ~195° sur cercle chromatique) -->
    <Color x:Key="PrimaryColor">#36A9E0</Color>
    <Color x:Key="PrimaryHoverColor">#2782AD</Color>
    <Color x:Key="PrimaryLightColor">#5BC0E8</Color> <!-- Variante claire pour hover léger -->
    <Color x:Key="PrimaryBackgroundColor">#E3F3FA</Color> <!-- Fond bleu très clair -->
    
    <!-- Couleur Secondaire : Bleu-Violet (Analogique au primaire, ~250°) -->
    <Color x:Key="SecondaryColor">#5E72E4</Color>
    <Color x:Key="SecondaryHoverColor">#4A5BC4</Color>
    <Color x:Key="SecondaryBackgroundColor">#EBEEFF</Color>
    
    <!-- Couleur Accent : Bleu-Vert Teal (Analogique au primaire, ~175°) -->
    <Color x:Key="AccentColor">#26C6DA</Color>
    <Color x:Key="AccentHoverColor">#00ACC1</Color>
    <Color x:Key="AccentBackgroundColor">#E0F7FA</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- COULEURS D'ÉTAT (Sémantique UI) -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- État : Succès (Vert, ~123°) -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="SuccessHoverColor">#388E3C</Color>
    <Color x:Key="SuccessLightColor">#66BB6A</Color>
    <Color x:Key="SuccessBackgroundColor">#E8F5E9</Color>
    
    <!-- État : Avertissement/Warning (Orange, ~30°, Complémentaire du bleu) -->
    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="WarningHoverColor">#F57C00</Color>
    <Color x:Key="WarningLightColor">#FFB74D</Color>
    <Color x:Key="WarningBackgroundColor">#FFF3E0</Color>
    
    <!-- État : Danger/Erreur (Rouge, ~3°) -->
    <Color x:Key="DangerColor">#E53935</Color>
    <Color x:Key="DangerHoverColor">#C62828</Color>
    <Color x:Key="DangerLightColor">#EF5350</Color>
    <Color x:Key="DangerBackgroundColor">#FFEBEE</Color>
    
    <!-- État : Information (Bleu ciel clair, ~210°) -->
    <Color x:Key="InfoColor">#2196F3</Color>
    <Color x:Key="InfoHoverColor">#1976D2</Color>
    <Color x:Key="InfoBackgroundColor">#E3F2FD</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- COULEURS D'INTERACTION -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Sélection -->
    <Color x:Key="SelectionBackgroundColor">#E3F3FA</Color>
    <Color x:Key="SelectionHoverBackgroundColor">#F0F9FD</Color>
    <Color x:Key="SelectionBorderColor">#36A9E0</Color>
    
    <!-- Focus -->
    <Color x:Key="FocusColor">#36A9E0</Color>
    <Color x:Key="FocusOutlineColor">#5BC0E8</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- PALETTE DE GRIS (NEUTRES) - Échelle cohérente -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="Gray50Color">#FAFAFA</Color> <!-- Fond de page ultra-léger -->
    <Color x:Key="Gray100Color">#F5F5F5</Color> <!-- Fond de composant -->
    <Color x:Key="Gray200Color">#EEEEEE</Color> <!-- Hover sur fond clair -->
    <Color x:Key="Gray300Color">#E0E0E0</Color> <!-- Bordures légères -->
    <Color x:Key="Gray400Color">#BDBDBD</Color> <!-- Bordures moyennes -->
    <Color x:Key="Gray500Color">#9E9E9E</Color> <!-- Texte désactivé -->
    <Color x:Key="Gray600Color">#757575</Color> <!-- Texte secondaire -->
    <Color x:Key="Gray700Color">#616161</Color> <!-- Texte secondaire foncé -->
    <Color x:Key="Gray800Color">#424242</Color> <!-- Texte principal -->
    <Color x:Key="Gray900Color">#212121</Color> <!-- Texte fort -->
    <Color x:Key="BlackColor">#000000</Color>
    
    <!-- Aliases sémantiques pour les gris -->
    <Color x:Key="TextPrimaryColor">#212121</Color> <!-- Gray900 -->
    <Color x:Key="TextSecondaryColor">#757575</Color> <!-- Gray600 -->
    <Color x:Key="TextDisabledColor">#9E9E9E</Color> <!-- Gray500 -->
    <Color x:Key="BorderLightColor">#E0E0E0</Color> <!-- Gray300 -->
    <Color x:Key="BorderMediumColor">#BDBDBD</Color> <!-- Gray400 -->
    <Color x:Key="BackgroundLightColor">#FAFAFA</Color> <!-- Gray50 -->
    <Color x:Key="BackgroundMediumColor">#F5F5F5</Color> <!-- Gray100 -->
    <Color x:Key="BackgroundControlColor">#FFFFFF</Color> <!-- Inputs sur fond blanc -->
    <Color x:Key="BackgroundDisabledColor">#F5F5F5</Color> <!-- Gray100 -->
    <Color x:Key="BackgroundHoverColor">#F5F5F5</Color> <!-- Gray100 -->

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- COULEURS SPÉCIFIQUES AUX COMPOSANTS -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <Color x:Key="HeaderIconBackgroundColor">#2196F3</Color> <!-- Info Blue -->
    <Color x:Key="AuthButtonUserBackgroundColor">#5E72E4</Color> <!-- Secondary Color -->
    <Color x:Key="AuthButtonSystemBackgroundColor">#E0E0E0</Color> <!-- Gray300 -->
    <Color x:Key="CardShadowColor">#08000000</Color> <!-- Ombre légère (10% opacité) -->

    <!-- =================================================================== -->
    <!-- SECTION 2 : CRÉATION DES PINCEAUX (BRUSHES) -->
    <!-- =================================================================== -->

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- PINCEAUX PRIMAIRES & SECONDAIRES -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{DynamicResource PrimaryHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{DynamicResource PrimaryBackgroundColor}"/>
    
    <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryHoverBrush" Color="{DynamicResource SecondaryHoverColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{DynamicResource SecondaryBackgroundColor}"/>
    
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{DynamicResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentBackgroundBrush" Color="{DynamicResource AccentBackgroundColor}"/>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- PINCEAUX D'ÉTAT -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Succès -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessHoverBrush" Color="{DynamicResource SuccessHoverColor}"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{DynamicResource SuccessLightColor}"/>
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="{DynamicResource SuccessBackgroundColor}"/>
    
    <!-- Avertissement -->
    <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningHoverBrush" Color="{DynamicResource WarningHoverColor}"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="{DynamicResource WarningLightColor}"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="{DynamicResource WarningBackgroundColor}"/>
    
    <!-- Danger -->
    <SolidColorBrush x:Key="DangerBrush" Color="{DynamicResource DangerColor}"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="{DynamicResource DangerHoverColor}"/>
    <SolidColorBrush x:Key="DangerLightBrush" Color="{DynamicResource DangerLightColor}"/>
    <SolidColorBrush x:Key="DangerBackgroundBrush" Color="{DynamicResource DangerBackgroundColor}"/>
    
    <!-- Information -->
    <SolidColorBrush x:Key="InfoBrush" Color="{DynamicResource InfoColor}"/>
    <SolidColorBrush x:Key="InfoHoverBrush" Color="{DynamicResource InfoHoverColor}"/>
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="{DynamicResource InfoBackgroundColor}"/>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- PINCEAUX D'INTERACTION -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="{DynamicResource SelectionBackgroundColor}"/>
    <SolidColorBrush x:Key="SelectionHoverBackgroundBrush" Color="{DynamicResource SelectionHoverBackgroundColor}"/>
    <SolidColorBrush x:Key="SelectionBorderBrush" Color="{DynamicResource SelectionBorderColor}"/>
    
    <SolidColorBrush x:Key="FocusBrush" Color="{DynamicResource FocusColor}"/>
    <SolidColorBrush x:Key="FocusOutlineBrush" Color="{DynamicResource FocusOutlineColor}"/>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- PINCEAUX DE GRIS (NEUTRES) -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="WhiteBrush" Color="{DynamicResource WhiteColor}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{DynamicResource BlackColor}"/>
    <SolidColorBrush x:Key="Gray50Brush" Color="{DynamicResource Gray50Color}"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="{DynamicResource Gray100Color}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{DynamicResource Gray200Color}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{DynamicResource Gray300Color}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{DynamicResource Gray400Color}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{DynamicResource Gray500Color}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{DynamicResource Gray600Color}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{DynamicResource Gray700Color}"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="{DynamicResource Gray800Color}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{DynamicResource Gray900Color}"/>
    
    <!-- Aliases sémantiques -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{DynamicResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{DynamicResource BorderLightColor}"/>
    <SolidColorBrush x:Key="BorderMediumBrush" Color="{DynamicResource BorderMediumColor}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{DynamicResource BackgroundLightColor}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{DynamicResource BackgroundMediumColor}"/>
    <SolidColorBrush x:Key="BackgroundControlBrush" Color="{DynamicResource BackgroundControlColor}"/>
    <SolidColorBrush x:Key="BackgroundDisabledBrush" Color="{DynamicResource BackgroundDisabledColor}"/>
    <SolidColorBrush x:Key="BackgroundHoverBrush" Color="{DynamicResource BackgroundHoverColor}"/>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- PINCEAUX SPÉCIFIQUES AUX COMPOSANTS -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="HeaderIconBackgroundBrush" Color="{DynamicResource HeaderIconBackgroundColor}"/>
    <SolidColorBrush x:Key="AuthButtonUserBackgroundBrush" Color="{DynamicResource AuthButtonUserBackgroundColor}"/>
    <SolidColorBrush x:Key="AuthButtonUserForegroundBrush" Color="{DynamicResource WhiteColor}"/>
    <SolidColorBrush x:Key="AuthButtonSystemBackgroundBrush" Color="{DynamicResource AuthButtonSystemBackgroundColor}"/>
    <SolidColorBrush x:Key="CardShadowBrush" Color="{DynamicResource CardShadowColor}"/>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- ALIAS DE COMPATIBILITÉ (pour migration progressive) -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Anciens noms → Nouveaux noms -->
    <SolidColorBrush x:Key="GreenBrush" Color="{DynamicResource SuccessColor}"/>
    <SolidColorBrush x:Key="GreenHoverBrush" Color="{DynamicResource SuccessHoverColor}"/>
    <SolidColorBrush x:Key="RedBrush" Color="{DynamicResource DangerColor}"/>
    <SolidColorBrush x:Key="RedHoverBrush" Color="{DynamicResource DangerHoverColor}"/>
    <SolidColorBrush x:Key="DarkTextBrush" Color="{DynamicResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="{DynamicResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{DynamicResource BorderLightColor}"/>
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{DynamicResource BackgroundLightColor}"/>
    <SolidColorBrush x:Key="MediumBackgroundBrush" Color="{DynamicResource BackgroundMediumColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource BackgroundControlColor}"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="{DynamicResource BackgroundDisabledColor}"/>

</ResourceDictionary>