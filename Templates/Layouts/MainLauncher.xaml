<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        TextOptions.TextFormattingMode="Display"
        Title="##loc:app.title##"
        WindowStartupLocation="CenterScreen">

    <Grid Background="White" Cursor="Arrow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- En-tÃªte -->
            <RowDefinition Height="*"/>    <!-- Contenu principal -->
            <RowDefinition Height="Auto"/> <!-- Pied de page global -->
        </Grid.RowDefinitions>

        <!-- 1. En-tÃªte -->
        <Grid Grid.Row="0" Margin="25,20,25,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Grid Width="48" Height="48" VerticalAlignment="Center" Margin="0,0,15,0">
                    <Ellipse Fill="{DynamicResource HeaderIconBackgroundBrush}"/>
                    <Rectangle Fill="White" Margin="12">
                        <Rectangle.OpacityMask>
                            <ImageBrush x:Name="HeaderIconMask" Stretch="Uniform"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Style="{DynamicResource H1Style}" Text="##loc:app.title##"/>
                    <TextBlock Style="{DynamicResource H2Style}" Margin="0" Text="##loc:app.subtitle##"/>
                </StackPanel>
            </StackPanel>

            <Button x:Name="AuthStatusButton" Grid.Column="1" 
                    Style="{DynamicResource ProfileButtonStyle}" 
                    VerticalAlignment="Center"/>
        </Grid>

        <!-- 2. Contenu principal : le TabControl -->
        <TabControl Grid.Row="1" Style="{DynamicResource NavTabControlStyle}">
            
            <!-- ONGLET 1 : Scripts -->
            <TabItem IsSelected="True" x:Name="ScriptsTabItem">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“œ" Margin="0,0,5,0"/>
                        <TextBlock Text="##loc:tabs.scripts##"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox x:Name="ScriptsListBox" Grid.Row="0" Margin="15,0,15,0" Style="{DynamicResource ScriptGridListBoxStyle}"/>

                    <Border Grid.Row="1" Margin="25" Padding="20" MinHeight="100" Background="#F5F5F5" CornerRadius="8">
                        <Grid>
                            <TextBlock x:Name="DefaultDetailText" Text="##loc:launcher.details_default##" Style="{DynamicResource H2Style}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Grid x:Name="ScriptDetailPanel" Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" VerticalAlignment="Center">
                                    <TextBlock x:Name="DescriptionTextBlock" TextWrapping="Wrap" Style="{DynamicResource H4Style}" Margin="0"/>
                                    <TextBlock x:Name="VersionTextBlock" Style="{DynamicResource DescriptionTextStyle}" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                    <Button x:Name="ExecuteButton" Content="##loc:launcher.execute_button##" Style="{DynamicResource PrimaryButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- ONGLET 2 : WinRM -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ› ï¸" FontFamily="Segoe UI Symbol" Margin="0,0,5,0"/>
                        <TextBlock Text="##loc:tabs.winrm##"/>
                    </StackPanel>
                </TabItem.Header>
                <TextBlock Text="##loc:tabs.winrm_content##" Style="{DynamicResource H1Style}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>

            <!-- ONGLET 3 : Journal -->
            <TabItem x:Name="LogTabItem">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“°" FontFamily="Segoe UI Symbol" Margin="0,0,5,0"/>
                        <TextBlock Text="##loc:tabs.journal##"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="White" BorderBrush="{DynamicResource LightGrayBrush}" BorderThickness="1" CornerRadius="8">
                        <RichTextBox x:Name="LauncherLogRichTextBox" Style="{DynamicResource TransparentRichTextBoxStyle}"/>
                    </Border>
                    
                    <Button Grid.Row="1" x:Name="ClearLocksButton" 
                            Content="##loc:launcher.clear_locks_button##" 
                            Style="{DynamicResource RedButtonStyle}" 
                            HorizontalAlignment="Right" 
                            Margin="0,10,0,0"
                            ToolTip="##loc:launcher.clear_locks_tooltip##"/>
                </Grid>
            </TabItem>

            <!-- ONGLET 4 : ParamÃ¨tres -->
            <TabItem x:Name="SettingsTabItem">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš™" FontFamily="Segoe UI Symbol" Margin="0,0,5,0"/>
                        <TextBlock Text="##loc:tabs.settings##"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="25">
                        
                        <!-- Carte 1 : ParamÃ¨tres GÃ©nÃ©raux -->
                        <Expander x:Name="GeneralSettingsCard" Style="{DynamicResource CardExpanderStyle}" IsExpanded="True">
                            <StackPanel Margin="0,10,0,0">
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.company_name##">
                                    <TextBox x:Name="SettingsCompanyNameTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸ¢"/>
                                </ContentControl>
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.app_version##">
                                    <TextBox x:Name="SettingsAppVersionTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="â„¹ï¸" IsReadOnly="True"/>
                                </ContentControl>
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.default_language##">
                                    <ComboBox x:Name="SettingsLanguageComboBox" Style="{DynamicResource StandardComboBoxStyle}" Tag="ðŸ—£ï¸"/>
                                </ContentControl>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <CheckBox x:Name="SettingsVerboseLoggingCheckBox" Style="{DynamicResource ToggleSwitchStyle}"/>
                                    <TextBlock Text="##loc:settings.enable_verbose##" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!-- Carte 2 : Interface Utilisateur -->
                        <Expander x:Name="UiSettingsCard" Style="{DynamicResource CardExpanderStyle}" IsExpanded="False">
                            <StackPanel Margin="0,10,0,0">
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.launcher_width##">
                                    <TextBox x:Name="SettingsLauncherWidthTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="â†”ï¸"/>
                                </ContentControl>
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.launcher_height##">
                                    <TextBox x:Name="SettingsLauncherHeightTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="â†•ï¸"/>
                                </ContentControl>
                            </StackPanel>
                        </Expander>

                        <!-- Carte 3 : Configuration Azure -->
                        <Expander x:Name="AzureSettingsCard" Style="{DynamicResource CardExpanderStyle}" IsExpanded="False">
                            <StackPanel Margin="0,10,0,0">
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.tenant_id##">
                                    <TextBox x:Name="SettingsTenantIdTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸŒ"/>
                                </ContentControl>
                                <!-- Note : Le sous-expander est conservÃ© pour la structure -->
                                <Expander Header="##loc:settings.azure_usermode##" IsExpanded="True" Margin="0,5,0,0">
                                    <StackPanel Margin="15,10,0,5">
                                        <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.azure_appid##">
                                            <TextBox x:Name="SettingsUserAuthAppIdTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸ†”"/>
                                        </ContentControl>
                                        <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.azure_scopes##">
                                            <TextBox x:Name="SettingsUserAuthScopesTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸ”" AcceptsReturn="True" Height="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                                        </ContentControl>
                                    </StackPanel>
                                </Expander>
                                <Expander Header="##loc:settings.azure_systemmode##" IsExpanded="True" Margin="0,10,0,0">
                                    <StackPanel Margin="15,5,0,5">
                                        <TextBlock Style="{DynamicResource H4Style}" Margin="0,5,0,5" Text="##loc:settings.azure_appid##"/>
                                        <TextBox x:Name="SettingsCertAuthAppIdTextBox" Style="{DynamicResource StandardTextBoxStyle}"/>
                                        
                                        <TextBlock Style="{DynamicResource H4Style}" Margin="0,15,0,5" Text="##loc:settings.azure_thumbprint##"/>
                                        <TextBox x:Name="SettingsCertAuthThumbprintTextBox" Style="{DynamicResource StandardTextBoxStyle}"/>
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Carte 4 : SÃ©curitÃ© -->
                        <Expander x:Name="SecuritySettingsCard" Style="{DynamicResource CardExpanderStyle}" IsExpanded="False">
                            <StackPanel Margin="0,10,0,0">
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.security_admingroup##">
                                    <TextBox x:Name="SettingsAdminGroupTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸ‘¥"/>
                                </ContentControl>
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.security_startupmode##">
                                    <ComboBox x:Name="SettingsStartupAuthModeComboBox" Style="{DynamicResource StandardComboBoxStyle}" Tag="âš™ï¸"/>
                                </ContentControl>
                            </StackPanel>
                        </Expander>

                        <Button x:Name="SettingsSaveButton" Content="##loc:settings.save_button##" Style="{DynamicResource PrimaryButtonStyle}" HorizontalAlignment="Right" Margin="0,10,0,0"/>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- 3. Pied de page / Barre de statut (GLOBAL) -->
        <Border Grid.Row="2" Padding="25,10" Background="#F5F5F5">
            <Grid>
                <TextBlock x:Name="StatusTextBlock" Text="##loc:launcher.status_available## : 0" Foreground="#333333" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Button x:Name="GlobalCloseAppsButton" Content="âŒ   ##loc:launcher.close_button##" Style="{DynamicResource SecondaryButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Window>