<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        TextOptions.TextFormattingMode="Display"
        Title="##loc:app.title##"
        WindowStartupLocation="CenterScreen">

    <!-- AmÃ©lioration : Le fond principal est maintenant un gris trÃ¨s clair -->
    <Grid Background="{DynamicResource BackgroundControlBrush}" Cursor="Arrow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- En-tÃªte -->
            <RowDefinition Height="*"/>    <!-- Contenu principal -->
            <RowDefinition Height="Auto"/> <!-- Pied de page global -->
        </Grid.RowDefinitions>

        <!-- 1. En-tÃªte -->
        <Grid Grid.Row="0" Margin="25,20,25,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Grid Width="48" Height="48" VerticalAlignment="Center" Margin="0,0,15,0">
                    <Ellipse Fill="{DynamicResource HeaderIconBackgroundBrush}"/>
                    <Rectangle Fill="{DynamicResource WhiteBrush}" Margin="12">
                        <Rectangle.OpacityMask>
                            <ImageBrush x:Name="HeaderIconMask" Stretch="Uniform"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Style="{DynamicResource H1Style}" Text="##loc:app.title##"/>
                    <TextBlock Style="{DynamicResource H2Style}" Margin="0" Text="##loc:app.subtitle##"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                
                <!-- Nouveau bouton Texte (Se connecter / Se dÃ©connecter) -->
                <Button x:Name="AuthTextButton" 
                        Content="Se connecter"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        FontSize="13"
                        FontWeight="SemiBold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Macaron existant (ProfileButton) -->
                <Button x:Name="AuthStatusButton" 
                        Style="{DynamicResource ProfileButtonStyle}" 
                        VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- 2. Contenu principal : le TabControl -->
        <TabControl Grid.Row="1" Style="{DynamicResource NavTabControlStyle}">
            
            <!-- ONGLET 1 : Scripts -->
            <TabItem IsSelected="True" x:Name="ScriptsTabItem">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“œ" Margin="0,0,5,0"/>
                        <TextBlock Text="##loc:tabs.scripts##"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Zone de contenu dynamique : Message ou Liste -->
                    <Grid Grid.Row="0">
                        <!-- Message d'invitation Ã  la connexion (Visible par dÃ©faut) -->
                        <StackPanel x:Name="ConnectPromptPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ”’" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="{DynamicResource Gray300Brush}"/>
                            <TextBlock Text="##loc:launcher.connect_prompt_title##" Style="{DynamicResource H1Style}" HorizontalAlignment="Center" TextAlignment="Center"/>
                            <TextBlock Text="##loc:launcher.connect_prompt_desc##" Style="{DynamicResource H2Style}" HorizontalAlignment="Center" TextAlignment="Center" MaxWidth="400" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Liste des scripts (MasquÃ©e par dÃ©faut) -->
                        <ListBox x:Name="ScriptsListBox" Margin="15,0,15,0" Style="{DynamicResource ScriptGridListBoxStyle}" Visibility="Collapsed"/>
                    </Grid>

                    <Border x:Name="DetailsPanelBorder" Visibility="Collapsed" 
                        Grid.Row="1" Margin="25" Padding="20" MinHeight="100" 
                        Background="{DynamicResource WhiteBrush}" CornerRadius="8"
                        BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
                        <Grid>
                            <TextBlock x:Name="DefaultDetailText" Text="##loc:launcher.details_default##" Style="{DynamicResource H2Style}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Grid x:Name="ScriptDetailPanel" Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" VerticalAlignment="Center">
                                    <TextBlock x:Name="DescriptionTextBlock" TextWrapping="Wrap" Style="{DynamicResource H4Style}" Margin="0"/>
                                    <TextBlock x:Name="VersionTextBlock" Style="{DynamicResource DescriptionTextStyle}" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                    <Button x:Name="BringToFrontButton" Content="##loc:launcher.bring_to_front_button##" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                                    <Button x:Name="ExecuteButton" Content="##loc:launcher.execute_button##" Style="{DynamicResource PrimaryButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                            <Grid x:Name="ScriptLoadingPanel" Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Name="LoadingScriptName" Style="{DynamicResource H3Style}" Margin="0,0,0,15" Text="CrÃ©ation d'utilisateur"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="â³" FontFamily="Segoe UI Symbol" FontSize="16" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="1" x:Name="LoadingStatusText" Text="##loc:ui.progressUpdate##" Style="{DynamicResource H4Style}" Margin="0"/>
                                    </Grid>
                                    <Border CornerRadius="4" Height="8" Margin="0,10,0,0" Background="{DynamicResource Gray200Brush}" ClipToBounds="True">
                                        <ProgressBar x:Name="LoadingProgressBar" BorderThickness="0" Foreground="{DynamicResource SuccessBrush}" Background="Transparent"/>
                                    </Border>
                                    <TextBlock x:Name="LoadingProgressText" Text="0%" HorizontalAlignment="Right" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- ONGLET 2 : GOUVERNANCE -->
            <!-- VisibilitÃ© gÃ©rÃ©e par le code : Visible uniquement si Admin -->
            <TabItem x:Name="GovernanceTabItem" Visibility="Collapsed">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ›¡ï¸" FontFamily="Segoe UI Symbol" Margin="0,0,5,0"/>
                        <TextBlock Text="Gouvernance"/>
                    </StackPanel>
                </TabItem.Header>
                
                <!-- Layout en 3 Colonnes -->
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/> <!-- Demandes (Gauche) -->
                        <ColumnDefinition Width="15"/> <!-- Espacement -->
                        <ColumnDefinition Width="*"/> <!-- Permissions Actuelles (Milieu) -->
                        <ColumnDefinition Width="15"/> <!-- Espacement -->
                        <ColumnDefinition Width="*"/> <!-- Membres (Droite) -->
                    </Grid.ColumnDefinitions>

                    <!-- COLONNE 1 : GESTION DES DEMANDES -->
                    <Border Grid.Column="0" Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Demandes en attente" Style="{DynamicResource H3Style}"/>
                            
                            <!-- Placeholder pour la liste des demandes -->
                            <ListBox Grid.Row="1" x:Name="PermissionRequestsListBox" Style="{DynamicResource StandardListBoxStyle}" Margin="0,10,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding RequesterUPN}" FontWeight="Bold"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Demande : " Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                                                    <TextBlock Text="{Binding RequestedScope}" Foreground="{DynamicResource PrimaryBrush}" FontWeight="SemiBold" FontSize="11"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Reason}" FontSize="10" FontStyle="Italic" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                <!-- Bouton VALIDER -->
                                                <Button Content="âœ…" Width="30" Height="25" Style="{DynamicResource GreenButtonStyle}" Margin="0,0,5,0"
                                                        ToolTip="Approuver et ajouter la permission"
                                                        Tag="{Binding}"/> <!-- Le Tag contient tout l'objet demande -->
                                                
                                                <!-- Bouton REFUSER -->
                                                <Button Content="âŒ" Width="30" Height="25" Style="{DynamicResource RedButtonStyle}"
                                                        ToolTip="Refuser la demande"
                                                        CommandParameter="{Binding RequestID}"/> <!-- On passe l'ID pour supprimer -->
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <TextBlock Grid.Row="1" x:Name="NoRequestsText" Text="Aucune demande en attente." 
                                        Visibility="Collapsed" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </Grid>
                    </Border>

                    <!-- COLONNE 2 : PERMISSIONS DE L'APPLICATION -->
                    <Border Grid.Column="2" Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Permissions Actives" Style="{DynamicResource H3Style}"/>
                            <TextBlock Grid.Row="1" Text="Droits actuellement accordÃ©s Ã  l'application dans Azure AD." Style="{DynamicResource DescriptionTextStyle}" Margin="0,0,0,10"/>

                            <!-- Liste des scopes -->
                            <ListBox Grid.Row="2" x:Name="CurrentScopesListBox" Style="{DynamicResource StandardListBoxStyle}">
                                <!-- Les items seront peuplÃ©s dynamiquement -->
                            </ListBox>

                            <StackPanel Grid.Row="3" Margin="0,10,0,0">
                                <Button x:Name="AddPermissionButton" Content="âž•   Ajouter manuellement" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,0,5"/>
                                <Button x:Name="GrantConsentButton" Content="ðŸ›¡ï¸   Valider les droits (Admin Consent)" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,0,5"/>
                                <Button x:Name="SyncAzureButton" Content="ðŸ”„   Synchroniser avec Azure" Style="{DynamicResource PrimaryButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- COLONNE 3 : AUDIT & MEMBRES -->
                    <Border Grid.Column="4" Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Membres &amp; RÃ´les" Style="{DynamicResource H3Style}"/>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- Groupe Admin -->
                                    <Expander Header="Administrateurs" IsExpanded="True" Margin="0,0,0,10">
                                        <ListBox x:Name="AdminMembersListBox" MaxHeight="150" Style="{DynamicResource StandardListBoxStyle}" BorderThickness="0"/>
                                    </Expander>

                                    <!-- Groupe User -->
                                    <Expander Header="Utilisateurs AutorisÃ©s" IsExpanded="False">
                                        <ListBox x:Name="UserMembersListBox" MaxHeight="150" Style="{DynamicResource StandardListBoxStyle}" BorderThickness="0"/>
                                    </Expander>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                </Grid>
            </TabItem>

            <!-- ONGLET 3 : GESTION DES SCRIPTS (NOUVEAU) -->
            <TabItem x:Name="ManagementTabItem" Visibility="Collapsed">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ› ï¸" FontFamily="Segoe UI Symbol" Margin="0,0,5,0"/>
                        <TextBlock Text="Gestion"/>
                    </StackPanel>
                </TabItem.Header>
                
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/> <!-- Colonne Gauche (BibliothÃ¨que + Scripts) -->
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>   <!-- Colonne Droite (DÃ©tails) -->
                    </Grid.ColumnDefinitions>

                    <!-- COLONNE GAUCHE -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- BibliothÃ¨que -->
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="*"/>    <!-- Scripts -->
                        </Grid.RowDefinitions>

                        <!-- 1. BIBLIOTHÃˆQUE DE GROUPES -->
                        <Border Grid.Row="0" Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="15">
                            <StackPanel>
                                <TextBlock Text="BibliothÃ¨que de Groupes" Style="{DynamicResource H3Style}"/>
                                <TextBlock Text="Ajouter ou supprimer des groupes connus." Style="{DynamicResource DescriptionTextStyle}" Margin="0,0,0,10"/>
                                
                                <!-- Ligne 1 : Ajouter -->
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" x:Name="LibraryNewGroupTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="Nouveau groupe Azure AD..."/>
                                    <Button Grid.Column="1" x:Name="LibraryAddGroupButton" Content="+" Style="{DynamicResource SecondaryButtonStyle}" Width="40" Margin="5,0,0,0" ToolTip="VÃ©rifier et Ajouter Ã  la bibliothÃ¨que"/>
                                </Grid>

                                <!-- Ligne 2 : Supprimer (Liste dÃ©roulante) -->
                                <Grid>
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0" x:Name="LibraryGroupsComboBox" Style="{DynamicResource StandardComboBoxStyle}" Tag="SÃ©lectionner pour supprimer...">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding GroupName}" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Button Grid.Column="1" x:Name="LibraryRemoveGroupButton" Content="ðŸ—‘ï¸" Style="{DynamicResource IconButtonStyle}" 
                                            Width="40" Height="38" Margin="5,0,0,0" ToolTip="Supprimer le groupe sÃ©lectionnÃ© de la bibliothÃ¨que"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- 2. LISTE DES SCRIPTS (DÃ©placÃ©e en bas) -->
                        <Border Grid.Row="2" Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                                <TextBlock Text="Scripts InstallÃ©s" Style="{DynamicResource H3Style}" Margin="15,15,0,10"/>
                                <ListBox x:Name="ManageScriptsListBox" Grid.Row="1" Style="{DynamicResource StandardListBoxStyle}" BorderThickness="0" Margin="2">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="8" Height="8" Margin="0,0,10,0" VerticalAlignment="Center">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding enabled}" Value="True"><Setter Property="Fill" Value="{DynamicResource SuccessBrush}"/></DataTrigger>
                                                                <DataTrigger Binding="{Binding enabled}" Value="False"><Setter Property="Fill" Value="{DynamicResource TextDisabledBrush}"/></DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <TextBlock Text="{Binding name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- COLONNE DROITE : DÃ‰TAILS -->
                    <Border x:Name="ManageDetailPanel" Grid.Column="2" Visibility="Collapsed"
                            Background="{DynamicResource WhiteBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="20">
                        <StackPanel>
                            <!-- En-tÃªte (InchangÃ©) -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                <Image Width="48" Height="48" Source="{Binding IconSource}" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding name}" Style="{DynamicResource H1Style}" FontSize="20" Margin="0"/>
                                    <TextBlock Text="{Binding id}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ActivÃ©" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                                    <CheckBox x:Name="ManageEnabledSwitch" Style="{DynamicResource ToggleSwitchStyle}" IsChecked="{Binding enabled}"/>
                                </StackPanel>
                            </Grid>
                            <Separator Margin="0,0,0,20" Background="{DynamicResource BorderLightBrush}"/>

                            <!-- ExÃ©cution (InchangÃ©) -->
                            <TextBlock Text="ExÃ©cution" Style="{DynamicResource H3Style}"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="ManageMaxRunsTextBox" Text="{Binding maxConcurrentRuns}" Width="60" HorizontalAlignment="Left" Style="{DynamicResource StandardTextBoxStyle}"/>
                                <TextBlock Grid.Column="1" Text="Max simultanÃ©es (-1 = illimitÃ©)" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </Grid>

                            <!-- NOUVEAU : SÃ©curitÃ© par CheckBox -->
                            <TextBlock Text="SÃ©curitÃ© &amp; AccÃ¨s" Style="{DynamicResource H3Style}" Margin="0,10,0,5"/>
                            <TextBlock Text="Cochez les groupes autorisÃ©s pour ce script." Style="{DynamicResource DescriptionTextStyle}" Margin="0,0,0,10"/>

                            <!-- Liste avec CheckBoxes -->
                            <ListBox x:Name="ManageSecurityCheckList" MaxHeight="300" Style="{DynamicResource StandardListBoxStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <!-- CORRECTION : On stocke le nom dans Tag pour le script. On utilise TextBlock pour l'affichage correct des underscores -->
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="2" Cursor="Hand" Tag="{Binding GroupName}">
                                            <TextBlock Text="{Binding GroupName}"/>
                                        </CheckBox>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button x:Name="ManageSaveButton" Content="Enregistrer les modifications" Style="{DynamicResource PrimaryButtonStyle}" HorizontalAlignment="Right" Margin="0,20,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock x:Name="ManageSelectPrompt" Grid.Column="2" Text="SÃ©lectionnez un script pour le configurer." 
                                VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Style="{DynamicResource H2Style}"/>
                </Grid>
            </TabItem>

            <!-- ONGLET 4 : Journal -->
            <TabItem x:Name="LogTabItem">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“°" FontFamily="Segoe UI Symbol" Margin="0,0,5,0"/>
                        <TextBlock Text="##loc:tabs.journal##"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <RichTextBox Grid.Row="0" x:Name="LauncherLogRichTextBox" Style="{DynamicResource StandardRichTextBoxStyle}"/>
                    
                    <Button Grid.Row="1" x:Name="ClearLocksButton" 
                            Content="##loc:launcher.clear_locks_button##" 
                            Style="{DynamicResource RedButtonStyle}" 
                            HorizontalAlignment="Right" 
                            Margin="0,10,0,0"
                            ToolTip="##loc:launcher.clear_locks_tooltip##"/>
                </Grid>
            </TabItem>

            <!-- ONGLET 5 : ParamÃ¨tres (Refonte complÃ¨te) -->
            <TabItem x:Name="SettingsTabItem">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš™" FontFamily="Segoe UI Symbol" Margin="0,0,5,0"/>
                        <TextBlock Text="##loc:tabs.settings##"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="25">
                        
                        <!-- Carte 1 : ParamÃ¨tres GÃ©nÃ©raux & Interface -->
                        <Expander x:Name="GeneralSettingsCard" Style="{DynamicResource CardExpanderStyle}" IsExpanded="False">
                            <StackPanel Margin="0,10,0,0">
                                <!-- Info Entreprise -->
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.company_name##">
                                    <TextBox x:Name="SettingsCompanyNameTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸ¢"/>
                                </ContentControl>
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.app_version##">
                                    <TextBox x:Name="SettingsAppVersionTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="â„¹ï¸" IsReadOnly="True"/>
                                </ContentControl>
                                
                                <!-- Langue et Logs -->
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.default_language##">
                                    <ComboBox x:Name="SettingsLanguageComboBox" Style="{DynamicResource StandardComboBoxStyle}" Tag="ðŸ—£ï¸"/>
                                </ContentControl>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <CheckBox x:Name="SettingsVerboseLoggingCheckBox" Style="{DynamicResource ToggleSwitchStyle}"/>
                                    <TextBlock Text="##loc:settings.enable_verbose##" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Dimensionnement (DÃ©placÃ© ici) -->
                                <Border Style="{DynamicResource SectionBorderStyle}" Margin="0,10,0,0">
                                    <StackPanel>
                                        <TextBlock Text="##loc:settings.section_ui##" Style="{DynamicResource H3Style}"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition/></Grid.ColumnDefinitions>
                                            <ContentControl Grid.Column="0" Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.launcher_width##" Margin="0,0,10,0">
                                                <TextBox x:Name="SettingsLauncherWidthTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="â†”ï¸"/>
                                            </ContentControl>
                                            <ContentControl Grid.Column="1" Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.launcher_height##">
                                                <TextBox x:Name="SettingsLauncherHeightTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="â†•ï¸"/>
                                            </ContentControl>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Expander>

                        <!-- Carte 2 : Configuration Azure (NettoyÃ©e) -->
                        <Expander x:Name="AzureSettingsCard" Style="{DynamicResource CardExpanderStyle}" IsExpanded="False">
                            <StackPanel Margin="0,10,0,0">
                                <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.tenant_id##">
                                    <TextBox x:Name="SettingsTenantIdTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸŒ"/>
                                </ContentControl>
                                
                                <Border Style="{DynamicResource SectionBorderStyle}" Margin="0,10,0,10">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="##loc:settings.azure_usermode##" Style="{DynamicResource H3Style}"/>
                                            <Button Grid.Column="1" x:Name="SettingsUserAuthTestButton" Content="##loc:settings.azure_test_connection_button##" Style="{DynamicResource SecondaryButtonStyle}" IsEnabled="False"/>
                                        </Grid>
                                        <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.azure_appid##">
                                            <TextBox x:Name="SettingsUserAuthAppIdTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸ†”"/>
                                        </ContentControl>
                                        <!-- NOTE: Les scopes seront gÃ©rÃ©s dynamiquement plus tard, mais on garde le champ pour l'instant -->
                                        <ContentControl Style="{DynamicResource FormFieldStyle}" Tag="##loc:settings.azure_scopes##">
                                            <TextBox x:Name="SettingsUserAuthScopesTextBox" Style="{DynamicResource StandardTextBoxStyle}" Tag="ðŸ”" AcceptsReturn="True" Height="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                                        </ContentControl>
